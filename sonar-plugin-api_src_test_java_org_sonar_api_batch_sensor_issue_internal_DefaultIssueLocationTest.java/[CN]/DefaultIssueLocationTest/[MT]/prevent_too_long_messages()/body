{
  new DefaultIssueLocation().onFile(inputFile).message(StringUtils.repeat("a",4000));
  thrown.expect(IllegalArgumentException.class);
  thrown.expectMessage("Message of an issue can't be greater than 4000: [aaa");
  thrown.expectMessage("aaa] size is 4001");
  new DefaultIssueLocation().onFile(inputFile).message(StringUtils.repeat("a",4001));
}
