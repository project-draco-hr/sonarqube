{
  dbTester.truncateTables();
  esTester.truncateIndices();
  dbClient=new DbClient(dbTester.database(),dbTester.myBatis(),new RuleDao(System2.INSTANCE),new ComponentDao(),new IssueDao(dbTester.myBatis()),new RoleDao());
