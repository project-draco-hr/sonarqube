{
  try {
    boolean ok=true;
    while (ok) {
      for (      ProcessWrapper process : processes) {
        if (process.isAlive()) {
          LOGGER.info("{} is down, stopping all other processes",process.getName());
          ok=false;
          interrupt();
        }
      }
      if (ok) {
        Thread.sleep(PING_DELAY_MS);
      }
    }
  }
 catch (  InterruptedException e) {
    LOGGER.debug("Monitoring thread is interrupted");
  }
 finally {
    terminate();
  }
}
