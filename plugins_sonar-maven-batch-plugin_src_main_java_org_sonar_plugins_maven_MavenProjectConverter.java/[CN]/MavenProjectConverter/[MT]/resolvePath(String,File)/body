{
  if (path != null) {
    File file=new File(StringUtils.trim(path));
    if (!file.isAbsolute()) {
      try {
        file=new File(basedir,path).getCanonicalFile();
      }
 catch (      IOException e) {
        throw new IllegalStateException("Unable to resolve path '" + path + "'",e);
      }
    }
    return file;
  }
  return null;
}
