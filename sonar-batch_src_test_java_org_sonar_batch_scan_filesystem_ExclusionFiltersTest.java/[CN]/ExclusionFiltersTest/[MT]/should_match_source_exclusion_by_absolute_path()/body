{
  java.io.File includedFile=temp.newFile("Foo.java");
  java.io.File excludedFile=temp.newFile("Bar.java");
  Settings settings=new Settings();
  settings.setProperty(CoreProperties.PROJECT_EXCLUSIONS_PROPERTY,"file:" + excludedFile.getCanonicalPath());
  ExclusionFilters filter=new ExclusionFilters(new FileExclusions(settings));
  InputFile includedInput=InputFile.create(includedFile,"src/main/java/org/bar/Foo.java",ImmutableMap.of(InputFile.ATTRIBUTE_TYPE,InputFile.TYPE_SOURCE,InputFile.ATTRIBUTE_CANONICAL_PATH,includedFile.getCanonicalPath()));
  assertThat(filter.accept(includedInput)).isTrue();
  InputFile excludedInput=InputFile.create(excludedFile,"src/main/java/org/bar/Bar.java",ImmutableMap.of(InputFile.ATTRIBUTE_TYPE,InputFile.TYPE_SOURCE,InputFile.ATTRIBUTE_CANONICAL_PATH,excludedFile.getCanonicalPath()));
  assertThat(filter.accept(excludedInput)).isFalse();
}
