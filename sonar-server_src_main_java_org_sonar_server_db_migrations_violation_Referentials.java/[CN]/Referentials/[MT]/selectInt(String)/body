{
  Connection connection=database.getDataSource().getConnection();
  Statement stmt=null;
  ResultSet rs=null;
  try {
    stmt=connection.createStatement();
    rs=stmt.executeQuery(sql);
    if (rs.next()) {
      return rs.getInt(1);
    }
    return 0;
  }
  finally {
    DbUtils.closeQuietly(connection,stmt,rs);
  }
}
