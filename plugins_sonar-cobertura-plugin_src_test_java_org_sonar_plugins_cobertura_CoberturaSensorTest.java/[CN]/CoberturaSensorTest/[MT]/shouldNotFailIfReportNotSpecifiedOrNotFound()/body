{
  ProjectFileSystem pfs=mock(ProjectFileSystem.class);
  when(pfs.resolvePath(anyString())).thenReturn(new File("notFound.xml"));
  Project project=mock(Project.class);
  when(project.getFileSystem()).thenReturn(pfs);
  when(project.getProperty(eq(CoreProperties.COBERTURA_REPORT_PATH_PROPERTY))).thenReturn("notFound.xml").thenReturn(null);
  sensor.analyse(project,context);
  sensor.analyse(project,context);
}
