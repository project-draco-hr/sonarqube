{
  File dir=reportsDir();
  try {
    FileUtils.deleteDirectory(dir);
  }
 catch (  IOException e) {
    throw new IllegalStateException("Fail to delete directory: " + dir.getAbsolutePath(),e);
  }
  DbSession session=dbClient.openSession(false);
  try {
    dao().truncate(session);
    session.commit();
  }
  finally {
    MyBatis.closeQuietly(session);
  }
}
