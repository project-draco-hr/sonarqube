{
  WebService.NewAction action=controller.createAction(SEARCH_ACTION).setDescription("Search for activities").setSince("4.4").setInternal(true).setHandler(this);
  action.createParam(PARAM_TYPE).setDescription("Types of activities to search").setPossibleValues(Activity.Type.values()).setDefaultValue(StringUtils.join(Activity.Type.values(),","));
  SearchOptions.defineFieldsParam(action,mapping.supportedFields());
  SearchOptions.definePageParams(action);
}
