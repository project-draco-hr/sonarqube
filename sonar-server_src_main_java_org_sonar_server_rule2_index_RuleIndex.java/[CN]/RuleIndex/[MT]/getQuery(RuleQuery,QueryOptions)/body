{
  QueryBuilder qb;
  if (query.getQueryText() != null && !query.getQueryText().isEmpty()) {
    qb=QueryBuilders.multiMatchQuery(query.getQueryText(),"_id",RuleNormalizer.RuleField.NAME.key(),RuleNormalizer.RuleField.NAME.key() + ".search",RuleNormalizer.RuleField.HTML_DESCRIPTION.key(),RuleNormalizer.RuleField.KEY.key(),RuleNormalizer.RuleField.LANGUAGE.key(),RuleNormalizer.RuleField.TAGS.key());
  }
 else {
    qb=QueryBuilders.matchAllQuery();
  }
  return qb;
}
