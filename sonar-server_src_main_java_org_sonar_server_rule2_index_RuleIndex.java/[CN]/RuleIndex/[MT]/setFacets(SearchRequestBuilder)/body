{
  query.addAggregation(AggregationBuilders.terms("Languages").field(RuleNormalizer.RuleField.LANGUAGE.key()).order(Terms.Order.count(false)).size(10).minDocCount(0));
  query.addAggregation(AggregationBuilders.terms("Tags").field(RuleNormalizer.RuleField.SYSTEM_TAGS.key()).field(RuleNormalizer.RuleField.TAGS.key()).order(Terms.Order.count(false)).size(10).minDocCount(0));
  query.addAggregation(AggregationBuilders.terms("Repositories").field(RuleNormalizer.RuleField.REPOSITORY.key()).order(Terms.Order.count(false)).size(10).minDocCount(0));
}
