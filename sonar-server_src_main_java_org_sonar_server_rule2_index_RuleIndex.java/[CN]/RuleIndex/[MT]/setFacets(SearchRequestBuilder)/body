{
  query.addFacet(FacetBuilders.termsFacet("Languages").field(RuleNormalizer.RuleField.LANGUAGE.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
  query.addFacet(FacetBuilders.termsFacet("Tags").field(RuleNormalizer.RuleField.TAGS.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
  query.addFacet(FacetBuilders.termsFacet("Repositories").field(RuleNormalizer.RuleField.REPOSITORY.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
}
