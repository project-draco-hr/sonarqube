{
  String[] keyParts=StringUtils.split(key,"/");
  Xpp3Dom node=configuration;
  for (int i=0; i < keyParts.length - 1; i++) {
    node=getOrCreateChild(node,keyParts[i]);
  }
  Xpp3Dom leaf=new Xpp3Dom(keyParts[keyParts.length - 1]);
  leaf.setValue(value);
  node.addChild(leaf);
  return this;
}
