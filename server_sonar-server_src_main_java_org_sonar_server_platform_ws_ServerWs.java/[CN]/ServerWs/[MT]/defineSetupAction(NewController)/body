{
  NewAction action=controller.createAction("setup").setDescription("Upgrade the SonarQube database").setSince("2.10").setPost(true).setHandler(RailsHandler.INSTANCE).setResponseExample(Resources.getResource(this.getClass(),"example-setup.json"));
  action.createParam("format").setDescription("Response format").setPossibleValues("json","csv","text");
}
