{
  QueryBuilder query=QueryBuilders.filteredQuery(QueryBuilders.matchAllQuery(),FilterBuilders.boolFilter().must(FilterBuilders.termsFilter(IssueNormalizer.IssueField.PROJECT.field(),uuid)));
  esClient.prepareDeleteByQuery(IssueIndexDefinition.INDEX_ISSUES).setQuery(query).get();
  if (refresh) {
    esClient.prepareRefresh(IssueIndexDefinition.INDEX_ISSUES).get();
  }
}
