{
  Node rval=null;
  if (node == null) {
    rval=null;
  }
 else   if (node.getRight(index) != null) {
    rval=leastNode(node.getRight(index),index);
  }
 else {
    Node parent=node.getParent(index);
    Node child=node;
    while ((parent != null) && (child == parent.getRight(index))) {
      child=parent;
      parent=parent.getParent(index);
    }
    rval=parent;
  }
  return rval;
}
