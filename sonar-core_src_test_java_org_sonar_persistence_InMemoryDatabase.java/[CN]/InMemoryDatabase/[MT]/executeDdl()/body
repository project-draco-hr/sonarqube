{
  Connection connection=null;
  try {
    connection=datasource.getConnection();
    DdlUtils.execute(connection,"derby");
  }
 catch (  SQLException e) {
    throw new IllegalStateException("Fail to execute DDL",e);
  }
 finally {
    if (connection != null) {
      try {
        connection.close();
      }
 catch (      SQLException e) {
      }
    }
  }
}
