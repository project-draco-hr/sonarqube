{
  try {
    context.index(javaFile);
    if (importSources) {
      String source=FileUtils.readFileToString(inputFile.getFile(),sourcesEncoding.name());
      context.saveSource(javaFile,source);
    }
  }
 catch (  SonarException e) {
    throw e;
  }
catch (  Exception e) {
    throw new SonarException("Unable to read and import the source file : '" + inputFile.getFile().getAbsolutePath() + "' with the charset : '"+ sourcesEncoding.name()+ "'.",e);
  }
}
