{
  Notification notification=new Notification("review-changed").setFieldValue("reviewId","1").setFieldValue("old.status","OPEN").setFieldValue("new.status","CLOSED");
  EmailMessage message=template.format(notification);
  assertThat(message.getMessageId(),is("review/1"));
  assertThat(message.getSubject(),is("Review #1"));
  assertThat(message.getFrom(),nullValue());
  assertThat(message.getMessage(),is("" + "Status: CLOSED (was OPEN)\n" + "\n"+ "--\n"+ "See it in Sonar: http://nemo.sonarsource.org/reviews/view/1\n"));
}
