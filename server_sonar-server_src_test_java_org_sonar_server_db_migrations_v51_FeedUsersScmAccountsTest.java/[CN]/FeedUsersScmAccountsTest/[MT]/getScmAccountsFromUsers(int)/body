{
  PreparedStatement pstmt=db.openConnection().prepareStatement("select scm_accounts from users where id = ?");
  pstmt.setInt(1,id);
  ResultSet rs=pstmt.executeQuery();
  try {
    while (rs.next()) {
      return rs.getString(1);
    }
  }
  finally {
    DbUtils.closeQuietly(rs);
    DbUtils.closeQuietly(pstmt);
  }
  return null;
}
