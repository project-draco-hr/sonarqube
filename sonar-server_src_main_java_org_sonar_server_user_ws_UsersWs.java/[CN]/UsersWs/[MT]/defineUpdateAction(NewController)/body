{
  NewAction action=controller.createAction("update").setDescription("Update a user. Requires Administer System permission").setSince("3.7").setPost(true).setHandler(RailsHandler.INSTANCE);
  action.createParam("login").setDescription("User login").setRequired(true).setExampleValue("myuser");
  action.createParam("name").setDescription("User name").setExampleValue("My New Name");
  action.createParam("email").setDescription("User email").setExampleValue("mynewname@email.com");
}
