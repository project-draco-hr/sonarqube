{
  RulesDefinition.NewRule rule=repo.createRule("DuplicatedBlocks");
  rule.setName("Source files should not have any duplicated blocks").addTags("pitfall").setHtmlDescription("An issue is created on a file as soon as there is at least one block of duplicated code on this file").setDebtSubCharacteristic(RulesDefinition.SubCharacteristics.LOGIC_CHANGEABILITY).setDebtRemediationFunction(rule.debtRemediationFunctions().linearWithOffset("10min","10min")).setEffortToFixDescription("number of duplicate blocks").setSeverity(Severity.MAJOR);
}
