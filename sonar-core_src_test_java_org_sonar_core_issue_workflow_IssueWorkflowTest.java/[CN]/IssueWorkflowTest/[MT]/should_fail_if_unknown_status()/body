{
  workflow.start();
  DefaultIssue issue=new DefaultIssue().setKey("ABCDE").setResolution(Issue.RESOLUTION_FIXED).setStatus("xxx").setNew(false).setAlive(false);
  try {
    workflow.doAutomaticTransition(issue,IssueChangeContext.createScan(new Date()));
    fail();
  }
 catch (  IllegalStateException e) {
    assertThat(e).hasMessage("Unknown status: xxx [issue=ABCDE]");
  }
}
