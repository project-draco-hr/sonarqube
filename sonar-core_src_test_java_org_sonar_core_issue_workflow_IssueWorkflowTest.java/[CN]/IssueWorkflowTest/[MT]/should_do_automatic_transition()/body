{
  workflow.start();
  DefaultIssue issue=new DefaultIssue().setKey("ABCDE").setResolution(Issue.RESOLUTION_FIXED).setStatus(Issue.STATUS_RESOLVED).setNew(false).setAlive(false);
  workflow.doAutomaticTransition(issue,IssueChangeContext.createScan(new Date()));
  assertThat(issue.resolution()).isEqualTo(Issue.RESOLUTION_FIXED);
  assertThat(issue.status()).isEqualTo(Issue.STATUS_CLOSED);
  assertThat(issue.closeDate()).isNotNull();
}
