{
  DefaultIssue issue=new DefaultIssue().setKey("ABCDE").setStatus(Issue.STATUS_OPEN).setRuleKey(RuleKey.of("manual","Performance")).setReporter("simon").setBeingClosed(true).setOnDisabledRule(false);
  workflow.start();
  workflow.doAutomaticTransition(issue,mock(IssueChangeContext.class));
  Assertions.assertThat(issue.resolution()).isEqualTo("FIXED");
  Assertions.assertThat(issue.status()).isEqualTo("CLOSED");
}
