{
  NewAction action=controller.createAction("authors").setSince("5.1").setDescription("Search SCM accounts which match a given query").setResponseExample(Resources.getResource(this.getClass(),"example-authors.json")).setHandler(this);
  action.createParam(PARAM_QUERY).setDescription("A pattern to match SCM accounts against").setExampleValue("luke");
  action.createParam(PARAM_PAGE_SIZE).setDescription("The size of the list to return").setExampleValue("25").setDefaultValue("10");
}
