{
  List<SnapshotFilter> filters=Lists.newArrayList();
  filters.add(new KeepLibrarySnapshotFilter());
  filters.add(new KeepSnapshotsBetweenTwoDatesFilter(new Date(),periods.dateToStartKeepingOneSnapshotByWeek));
  filters.add(new KeepOneSnapshotByPeriodBetweenTwoDatesFilter(GregorianCalendar.WEEK_OF_YEAR,periods.dateToStartKeepingOneSnapshotByWeek,periods.dateToStartKeepingOneSnapshotByMonth));
  filters.add(new KeepOneSnapshotByPeriodBetweenTwoDatesFilter(GregorianCalendar.MONTH,periods.dateToStartKeepingOneSnapshotByMonth,periods.dateToStartDeletingAllSnapshots));
  filters.add(new KeepLastSnapshotFilter());
  return filters;
}
