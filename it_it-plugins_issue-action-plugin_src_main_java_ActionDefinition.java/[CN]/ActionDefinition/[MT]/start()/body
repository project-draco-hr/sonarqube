{
  actions.add("fake").setConditions(new HasResolution(Issue.RESOLUTION_FIXED),new NotCondition(new HasIssuePropertyCondition(FAKE_PROPERTY))).setFunctions(new Function(){
    @Override public void execute(    Context context){
      context.setAttribute(FAKE_PROPERTY,"fake action");
      context.addComment("New Comment from fake action");
    }
  }
);
}
