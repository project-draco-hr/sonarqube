{
  for (  File sourceFile : sourceFiles) {
    PathResolver.RelativePath sourceDirPath=pathResolver.relativePath(sourceDirs,sourceFile);
    if (sourceDirPath == null) {
      LoggerFactory.getLogger(getClass()).warn(String.format("File '%s' is not declared in source directories %s",sourceFile.getAbsoluteFile(),StringUtils.join(sourceDirs,", ")));
    }
 else {
      indexFile(fileSystem,progress,sourceDirPath.dir(),sourceFile,type);
    }
  }
}
