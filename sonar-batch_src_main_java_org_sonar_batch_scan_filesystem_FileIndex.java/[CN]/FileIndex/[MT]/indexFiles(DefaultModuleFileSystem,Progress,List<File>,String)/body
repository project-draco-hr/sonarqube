{
  for (  File sourceFile : sourceFiles) {
    String path=pathResolver.relativePath(fileSystem.baseDir(),sourceFile);
    if (path == null) {
      LoggerFactory.getLogger(getClass()).warn(String.format("File '%s' is not declared in module basedir %s",sourceFile.getAbsoluteFile(),fileSystem.baseDir()));
    }
 else {
      indexFile(fileSystem,progress,sourceFile,type);
    }
  }
}
