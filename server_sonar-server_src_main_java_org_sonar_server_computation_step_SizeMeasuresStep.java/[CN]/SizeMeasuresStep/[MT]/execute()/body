{
  Metric fileMetric=metricRepository.getByKey(CoreMetrics.FILES_KEY);
  Metric directoryMetric=metricRepository.getByKey(CoreMetrics.DIRECTORIES_KEY);
  new FileAndDirectoryMeasureCrawler(directoryMetric,fileMetric).visit(treeRootHolder.getRoot());
  FormulaExecutorComponentCrawler.newBuilder(metricRepository,measureRepository).buildFor(AGGREGATED_SIZE_MEASURE_FORMULAS).visit(treeRootHolder.getRoot());
}
