{
  Plugin plugin=new Plugin("p_key").setName("p_name").setCategory("p_category").setDescription("p_description").setLicense("p_license").setOrganization("p_orga_name").setOrganizationUrl("p_orga_url").setTermsConditionsUrl("p_t_and_c_url");
  Release pluginRelease=release(plugin,"1.12.1").setDate(DateUtils.parseDate("2015-04-16")).setDownloadUrl("http://p_file.jar").addOutgoingDependency(release(PLUGIN_1,"0.3.6")).addOutgoingDependency(release(PLUGIN_2,"1.0.0"));
  when(updateCenter.findAvailablePlugins()).thenReturn(of(pluginUpdate(pluginRelease,COMPATIBLE)));
  underTest.handle(request,response);
  assertJson(response.outputAsString()).isSimilarTo(resource("properties_per_plugin.json"));
}
