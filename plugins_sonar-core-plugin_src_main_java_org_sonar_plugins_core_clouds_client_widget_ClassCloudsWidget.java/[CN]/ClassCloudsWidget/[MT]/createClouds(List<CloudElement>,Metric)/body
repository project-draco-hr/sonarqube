{
  for (  CloudElement tag : cloudElements) {
    HTML className=new HTML("<span style=\"font-size:" + Integer.toString(sizeCalculator.getFontSizePercent(tag.getFontSize())) + "%; color:"+ colorCalculator.getFontColor(tag.getFontColor())+ "\" >"+ tag.getResource().getName()+ "</span>\n");
    className.setStyleName("inline");
    Hyperlink link=createLink(tag,colorMetric);
    link.setHTML(className.getHTML());
    main.add(link);
  }
}
