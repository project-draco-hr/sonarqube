{
  if (!issue.comments().isEmpty()) {
    json.name("comments").beginArray();
    for (    IssueComment comment : issue.comments()) {
      json.beginObject().prop("key",comment.key()).prop("login",comment.userLogin()).prop("htmlText",Markdown.convertToHtml(comment.markdownText())).prop("createdAt",DateUtils.formatDateTime(comment.createdAt())).endObject();
    }
    json.endArray();
  }
}
