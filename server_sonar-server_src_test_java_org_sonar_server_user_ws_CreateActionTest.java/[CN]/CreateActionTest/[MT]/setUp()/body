{
  dbTester.truncateTables();
  esTester.truncateIndices();
  System2 system2=new System2();
  UserDao userDao=new UserDao(dbTester.myBatis(),system2);
  UserGroupDao userGroupDao=new UserGroupDao();
  GroupDao groupDao=new GroupDao(system2);
  dbClient=new DbClient(dbTester.database(),dbTester.myBatis(),userDao,userGroupDao,groupDao);
  session=dbClient.openSession(false);
  groupDao.insert(session,new GroupDto().setName("sonar-users"));
  session.commit();
  userIndexer=(UserIndexer)new UserIndexer(dbClient,esTester.client()).setEnabled(true);
  index=new UserIndex(esTester.client());
  tester=new WsTester(new UsersWs(new CreateAction(index,new UserUpdater(mock(NewUserNotifier.class),settings,dbClient,userIndexer,system2),i18n,userSessionRule)));
  controller=tester.controller("api/users");
}
