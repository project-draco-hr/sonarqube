{
  GroupDto existingGroup=groupDao.insert(session,new GroupDto().setName("old-name").setDescription("Old Description"));
  session.commit();
  loginAsAdmin();
  tester.newPostRequest("api/usergroups","update").setParam("id",existingGroup.getId().toString()).setParam("description","New Description").execute().assertJson("{" + "  \"group\": {" + "    \"name\": \"old-name\","+ "    \"description\": \"New Description\","+ "    \"membersCount\": 0"+ "  }"+ "}");
}
