{
  NewAction action=controller.createAction("system").setDescription("Get the system properties, server info (Java, OS), database configuration, JVM statistics and installed plugins. Requires Administer System permission").setSince("2.10").setHandler(RailsHandler.INSTANCE).setResponseExample(Resources.getResource(this.getClass(),"example-system.json"));
  RailsHandler.addFormatParam(action);
}
