{
  NewController controller=context.newController("api/issue_filters").setSince("4.2").setDescription("Issue Filters");
  NewAction app=controller.newAction("app");
  app.setDescription("Data required for rendering the page 'Issues'").setInternal(true).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      app(request,response);
    }
  }
);
  NewAction show=controller.newAction("show");
  show.setDescription("Get detail of issue filter").setSince("4.2").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      show(request,response);
    }
  }
).newParam("id");
  controller.done();
}
