{
  try {
    logger.info("Initialize input");
    IssueReferentials referentials=new IssueReferentials(db);
    if (referentials.totalIssues() > 0) {
      logger.info("Migrate {} issues",referentials.totalIssues());
      convert(referentials);
    }
  }
 catch (  SQLException e) {
    logger.error(FAILURE_MESSAGE,e);
    SqlUtil.log(logger,e);
    throw MessageException.of(FAILURE_MESSAGE);
  }
catch (  Exception e) {
    logger.error(FAILURE_MESSAGE,e);
    throw MessageException.of(FAILURE_MESSAGE);
  }
}
