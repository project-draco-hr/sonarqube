{
  map("params",new IndexMapper<RuleDoc,RuleMappingContext>(RuleNormalizer.RuleField.PARAMS.field()){
    @Override public void write(    JsonWriter json,    RuleDoc rule,    RuleMappingContext context){
      json.name("params").beginArray();
      for (      RuleParam param : rule.params()) {
        json.beginObject().prop("key",param.key()).prop("htmlDesc",param.description() == null ? null : Markdown.convertToHtml(param.description())).prop("type",param.type().type()).prop("defaultValue",param.defaultValue()).endObject();
      }
      json.endArray();
    }
  }
);
}
