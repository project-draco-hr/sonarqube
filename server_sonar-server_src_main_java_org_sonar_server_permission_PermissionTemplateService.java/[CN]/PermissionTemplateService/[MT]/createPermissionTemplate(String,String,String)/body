{
  DbSession dbSession=dbClient.openSession(false);
  try {
    checkGlobalAdminUser(userSession);
    validateTemplateNameForCreation(dbSession,name);
    validateProjectPattern(projectKeyPattern);
    Date now=new Date(System2.INSTANCE.now());
    PermissionTemplateDto permissionTemplateDto=permissionTemplateDao.insert(dbSession,new PermissionTemplateDto().setKee(Uuids.create()).setName(name).setKeyPattern(projectKeyPattern).setDescription(description).setCreatedAt(now).setUpdatedAt(now));
    dbSession.commit();
    return PermissionTemplate.create(permissionTemplateDto);
  }
  finally {
    dbClient.closeSession(dbSession);
  }
}
