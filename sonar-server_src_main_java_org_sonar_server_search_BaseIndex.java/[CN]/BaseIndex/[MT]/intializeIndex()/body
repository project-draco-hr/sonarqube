{
  String index=this.getIndexName();
  IndicesExistsResponse indexExistsResponse=getClient().admin().indices().prepareExists(index).execute().actionGet();
  if (!indexExistsResponse.isExists()) {
    LOG.info("Setup of index {}",this.getIndexName());
    try {
      LOG.debug("Settings: {}",getIndexSettings().string());
      LOG.debug("Mapping: {}",getMapping().string());
    }
 catch (    IOException e) {
      e.printStackTrace();
    }
    getClient().admin().indices().prepareCreate(index).setSettings(getIndexSettings()).addMapping(getType(),getMapping()).execute().actionGet();
  }
}
