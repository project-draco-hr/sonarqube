{
  WebService.NewAction action=context.createAction(ACTION).setPost(true).setDescription(format("Update an organization.<br/>" + "The '%s' or '%s' must be provided.<br/>" + "Require 'Administer System' permission.",PARAM_ID,PARAM_KEY)).setInternal(true).setSince("6.2").setHandler(this);
  action.createParam(PARAM_ID).setRequired(false).setDescription("Organization id").setExampleValue(UUID_EXAMPLE_03);
  action.createParam(PARAM_KEY).setRequired(false).setDescription("Organization key").setExampleValue("foo-company");
  wsSupport.addOrganizationDetailsParams(action);
}
