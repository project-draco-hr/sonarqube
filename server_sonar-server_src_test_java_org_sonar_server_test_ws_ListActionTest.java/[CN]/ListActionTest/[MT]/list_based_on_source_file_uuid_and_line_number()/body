{
  String mainFileUuid="MAIN-FILE-UUID";
  userSessionRule.addProjectUuidPermissions(UserRole.CODEVIEWER,TestFile1.PROJECT_UUID);
  dbClient.componentDao().insert(db.getSession(),TestFile1.dto(),TestFile2.dto(),new ComponentDto().setUuid(mainFileUuid).setProjectUuid(TestFile1.PROJECT_UUID));
  db.getSession().commit();
  es.putDocuments(TestIndexDefinition.INDEX,TestIndexDefinition.TYPE,TestFile1.doc(),TestFile2.doc());
  WsTester.TestRequest request=ws.newGetRequest("api/tests","list").setParam(ListAction.SOURCE_FILE_ID,mainFileUuid).setParam(ListAction.SOURCE_FILE_LINE_NUMBER,"10");
  request.execute().assertJson(getClass(),"list-main-file.json");
}
