{
  List<ActiveRuleChange> changes=Lists.newArrayList();
  List<QualityProfileDto> children=db.qualityProfileDao().findChildren(session,profileKey);
  for (  QualityProfileDto child : children) {
    RuleActivation childActivation=new RuleActivation(activation.getRuleKey()).isCascade(true).setParameters(activation.getParameters()).setSeverity(activation.getSeverity());
    changes.addAll(activate(session,childActivation,child.getKey()));
  }
  return changes;
}
