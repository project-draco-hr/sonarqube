{
  verifyPermission(UserSession.get());
  DbSession dbSession=db.openSession(false);
  try {
    List<ActiveRuleChange> changes=activate(dbSession,activation);
    if (!changes.isEmpty()) {
      dbSession.commit();
      previewCache.reportGlobalModification();
    }
    return changes;
  }
  finally {
    dbSession.close();
  }
}
