{
  QueryContext queryContext=fixtureForCreatedAtFacet();
  Collection<FacetValue> createdAt=index.search(IssueQuery.builder().createdAfter(DateUtils.parseDate("2014-09-01")).createdBefore(DateUtils.parseDate("2014-09-21")).build(),queryContext).getFacets().get("createdAt");
  assertThat(createdAt).hasSize(3).containsOnly(new FacetValue("2014-09-01T04:00:00+0000",4),new FacetValue("2014-09-08T04:00:00+0000",0),new FacetValue("2014-09-15T04:00:00+0000",1));
}
