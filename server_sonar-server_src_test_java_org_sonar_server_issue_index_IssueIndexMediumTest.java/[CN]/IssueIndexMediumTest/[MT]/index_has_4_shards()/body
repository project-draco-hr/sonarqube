{
  String shardSettingKey="index.number_of_shards";
  Settings settings=index.getIndexSettings();
  assertThat(settings.get(shardSettingKey)).isEqualTo("4");
  assertThat(tester.get(SearchClient.class).admin().indices().prepareGetSettings(IndexDefinition.ISSUES.getIndexName()).get().getSetting(IndexDefinition.ISSUES.getIndexName(),shardSettingKey)).isEqualTo("4");
}
