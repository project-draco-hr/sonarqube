{
  QueryContext queryContext=fixtureForCreatedAtFacet();
  Collection<FacetValue> createdAt=index.search(IssueQuery.builder().createdAfter(DateUtils.parseDate("2014-09-01")).createdBefore(DateUtils.parseDate("2014-09-08")).build(),queryContext).getFacets().get("createdAt");
  assertThat(createdAt).hasSize(8).containsOnly(new FacetValue("2014-08-31T01:00:00+0000",0),new FacetValue("2014-09-01T01:00:00+0000",2),new FacetValue("2014-09-02T01:00:00+0000",1),new FacetValue("2014-09-03T01:00:00+0000",0),new FacetValue("2014-09-04T01:00:00+0000",0),new FacetValue("2014-09-05T01:00:00+0000",1),new FacetValue("2014-09-06T01:00:00+0000",0),new FacetValue("2014-09-07T01:00:00+0000",0));
}
