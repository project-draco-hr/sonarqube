{
  requireNonNull(component);
  requireNonNull(metric);
  requireNonNull(measure);
  Optional<Measure> existingMeasure=findLocal(component,metric,measure);
  if (!existingMeasure.isPresent()) {
    throw new UnsupportedOperationException(String.format("a measure can be updated only if one already exists for a specific Component (ref=%s), Metric (key=%s)%s. Use add method",component.getRef(),metric.getKey(),buildRuleOrCharacteristicMsgPart(measure)));
  }
  addLocal(component,metric,measure);
}
