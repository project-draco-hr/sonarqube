{
  requireNonNull(component);
  requireNonNull(metric);
  requireNonNull(measure);
  Optional<Measure> existingMeasure=findLocal(component,metric,measure);
  if (existingMeasure.isPresent()) {
    throw new UnsupportedOperationException(String.format("a measure can be set only once for a specific Component (ref=%s), Metric (key=%s)%s. Use update method",component.getRef(),metric.getKey(),buildRuleOrCharacteristicMsgPart(measure)));
  }
  addLocal(component,metric,measure);
}
