{
  requireNonNull(component);
  requireNonNull(metric);
  requireNonNull(measure);
  Optional<Measure> existingMeasure=findLocal(component,metric);
  if (existingMeasure.isPresent()) {
    throw new UnsupportedOperationException(String.format("a measure can be set only once for a specific Component (ref=%s) and Metric (key=%s)",component.getRef(),metric.getKey()));
  }
  addLocal(component,metric,measure);
}
