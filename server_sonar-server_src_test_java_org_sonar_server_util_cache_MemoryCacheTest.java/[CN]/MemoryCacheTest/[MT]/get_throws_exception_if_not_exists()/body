{
  when(loader.load("foo")).thenReturn("bar");
  assertThat(cache.get("foo")).isEqualTo("bar");
  assertThat(cache.get("foo")).isEqualTo("bar");
  verify(loader,times(1)).load("foo");
  try {
    cache.get("not_exists");
    fail();
  }
 catch (  IllegalArgumentException e) {
    assertThat(e).hasMessage("Not found: not_exists");
  }
}
