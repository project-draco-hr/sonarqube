{
  when(loader.load("foo")).thenReturn("bar");
  assertThat(cache.getNullable("foo")).isEqualTo("bar");
  assertThat(cache.getNullable("foo")).isEqualTo("bar");
  verify(loader,times(1)).load("foo");
  assertThat(cache.getNullable("not_exists")).isNull();
  cache.clear();
  assertThat(cache.getNullable("foo")).isEqualTo("bar");
  verify(loader,times(2)).load("foo");
}
