{
  Preconditions.checkArgument(StringUtils.contains(sql,"count("),"Parameter must be a SQL request containing 'count(x)' function. Got " + sql);
  try (Connection connection=openConnection();PreparedStatement stmt=connection.prepareStatement(sql);ResultSet rs=stmt.executeQuery()){
    if (rs.next()) {
      return rs.getInt(1);
    }
    throw new IllegalStateException("No results for " + sql);
  }
 catch (  Exception e) {
    throw new IllegalStateException("Fail to execute sql: " + sql,e);
  }
}
