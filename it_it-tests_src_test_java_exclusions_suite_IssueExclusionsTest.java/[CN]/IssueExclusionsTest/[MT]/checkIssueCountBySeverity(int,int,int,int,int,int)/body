{
  Resource project=orchestrator.getServer().getWsClient().find(ResourceQuery.createForMetrics(PROJECT_KEY,"violations","info_violations","minor_violations","major_violations","blocker_violations","critical_violations"));
  assertThat(project.getMeasureIntValue("violations")).isEqualTo(total);
  assertThat(project.getMeasureIntValue("info_violations")).isEqualTo(taggedXoo);
  assertThat(project.getMeasureIntValue("minor_violations")).isEqualTo(perLine);
  assertThat(project.getMeasureIntValue("major_violations")).isEqualTo(perFile);
  assertThat(project.getMeasureIntValue("blocker_violations")).isEqualTo(blocker);
  assertThat(project.getMeasureIntValue("critical_violations")).isEqualTo(perModule);
}
