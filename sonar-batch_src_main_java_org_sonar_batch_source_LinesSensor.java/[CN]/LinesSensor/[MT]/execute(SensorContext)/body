{
  FileSystem fs=context.fileSystem();
  for (  InputFile f : fs.inputFiles(fs.predicates().hasType(Type.MAIN))) {
    ((DefaultMeasure<Integer>)context.<Integer>newMeasure().on(f).forMetric(CoreMetrics.LINES).withValue(f.lines())).setFromCore().save();
    if (f.language() == null) {
      ((DefaultMeasure<Integer>)context.<Integer>newMeasure().on(f).forMetric(CoreMetrics.NCLOC).withValue(((DefaultInputFile)f).nonBlankLines())).save();
      ((DefaultMeasure<Integer>)context.<Integer>newMeasure().on(f).forMetric(CoreMetrics.LINES_TO_COVER).withValue(0)).save();
    }
  }
}
