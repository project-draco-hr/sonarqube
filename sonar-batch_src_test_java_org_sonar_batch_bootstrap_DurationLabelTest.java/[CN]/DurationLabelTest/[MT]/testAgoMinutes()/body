{
  DurationLabel durationlabel=new DurationLabel();
  int minutes=2;
  String label=durationlabel.label(now() - ago(minutes * MINUTE));
  String expected=durationlabel.join(durationlabel.getPrefixAgo(),MessageFormat.format(durationlabel.getMinutes(),minutes),durationlabel.getSuffixAgo());
  assertThat(label).isEqualTo(expected);
}
