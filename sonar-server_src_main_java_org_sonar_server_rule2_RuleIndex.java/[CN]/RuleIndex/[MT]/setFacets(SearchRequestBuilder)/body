{
  query.addFacet(FacetBuilders.termsFacet("Languages").field(RuleField.LANGUAGE.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
  query.addFacet(FacetBuilders.termsFacet("Tags").field(RuleField.TAGS.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
  query.addFacet(FacetBuilders.termsFacet("Repositories").field(RuleField.REPOSITORY.key()).size(10).global(true).order(TermsFacet.ComparatorType.COUNT));
}
