{
  try {
    return jsonBuilder().startObject().startObject("index").field("number_of_replicas",0).field("number_of_shards",3).startObject("mapper").field("dynamic",true).endObject().startObject("analysis").startObject("analyzer").startObject("path_analyzer").field("type","custom").field("tokenizer","path_hierarchy").endObject().endObject().endObject().endObject().endObject();
  }
 catch (  IOException e) {
    LOG.error("Could not create index settings for {}",this.getIndexName());
    return null;
  }
}
