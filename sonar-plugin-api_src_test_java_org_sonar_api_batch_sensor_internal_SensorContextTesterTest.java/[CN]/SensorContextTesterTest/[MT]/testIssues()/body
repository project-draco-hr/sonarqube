{
  assertThat(tester.allIssues()).isEmpty();
  NewIssue newIssue=tester.newIssue();
  newIssue.at(newIssue.newLocation().on(new DefaultInputFile("foo","src/Foo.java"))).forRule(RuleKey.of("repo","rule")).save();
  newIssue=tester.newIssue();
  newIssue.at(newIssue.newLocation().on(new DefaultInputFile("foo","src/Foo.java"))).forRule(RuleKey.of("repo","rule")).save();
  assertThat(tester.allIssues()).hasSize(2);
}
