{
  while (!Thread.currentThread().isInterrupted()) {
    System.out.println("Thread[" + name + "] - ping");
    try {
      if (getName().equalsIgnoreCase("ES")) {
        Thread.sleep(20000);
      }
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      break;
    }
  }
  System.out.println("Shutting down Thread[" + name + "]");
}
