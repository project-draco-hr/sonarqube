{
  MavenPlugin mavenPlugin=MavenPlugin.getPlugin(project.getPom(),CoberturaUtils.COBERTURA_GROUP_ID,CoberturaUtils.COBERTURA_ARTIFACT_ID);
  if (mavenPlugin != null) {
    String path=mavenPlugin.getParameter("outputDirectory");
    if (path != null) {
      return path + "/coverage.xml";
    }
  }
  return null;
}
