{
  WebService.NewAction action=controller.createAction("backup").setDescription("Backup a quality profile. Requires Administer Quality Profiles permission.").setSince("3.1").setPost(true).setHandler(RailsHandler.INSTANCE);
  action.createParam("language").setDescription("Profile language.").setRequired(true).setExampleValue("java");
  action.createParam("name").setDescription("Profile name. If not set, the default profile for the selected language is used.").setExampleValue("Sonar way");
}
