{
  int nbMeasuresOnSameMetricAndMeasure=dbClient.customMeasureDao().countByComponentIdAndMetricId(dbSession,component.uuid(),metric.getId());
  if (nbMeasuresOnSameMetricAndMeasure > 0) {
    throw new ServerException(HttpURLConnection.HTTP_CONFLICT,String.format("A measure already exists for project '%s' (id: %s) and metric '%s' (id: '%d')",component.key(),component.uuid(),metric.getKey(),metric.getId()));
  }
}
