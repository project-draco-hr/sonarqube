{
  WebService.NewAction action=context.createAction("groups").setSince("5.2").setInternal(true).setDescription(String.format("List permission's groups.<br /> " + "If the project id or project key is provided, groups with project permissions are returned.<br />" + "If the query parameter '%s' is specified, the '%s' parameter is '%s'.",Param.TEXT_QUERY,Param.SELECTED,SelectionMode.ALL.value())).addPagingParams(100).addSearchQuery("sonar","names").addSelectionModeParam().setResponseExample(Resources.getResource(getClass(),"groups-example.json")).setHandler(this);
  createPermissionParameter(action);
  createProjectUuidParameter(action);
  createProjectKeyParameter(action);
}
