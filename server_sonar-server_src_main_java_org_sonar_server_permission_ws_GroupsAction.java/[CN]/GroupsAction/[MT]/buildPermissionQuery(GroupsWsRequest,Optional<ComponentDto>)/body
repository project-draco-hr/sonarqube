{
  PermissionQuery.Builder permissionQuery=PermissionQuery.builder().setPermission(request.getPermission()).setPageIndex(request.getPage()).setPageSize(request.getPageSize()).setSearchQuery(request.getQuery());
  if (project.isPresent()) {
    permissionQuery.setComponentUuid(project.get().uuid());
  }
  if (request.getQuery() == null) {
    permissionQuery.withAtLeastOnePermission();
  }
  return permissionQuery.build();
}
