{
  if (inputStream != null)   throw new Error("\n   ERROR: Second call to the constructor of a static SimpleCharStream.\n" + "       You must either use ReInit() or set the JavaCC option STATIC to false\n" + "       during the generation of this class.");
  inputStream=dstream;
  line=startline;
  column=startcolumn - 1;
  available=bufsize=buffersize;
  buffer=new char[buffersize];
  bufline=new int[buffersize];
  bufcolumn=new int[buffersize];
}
