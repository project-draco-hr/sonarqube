{
  RuleDto ruleDto=RuleTesting.newDto(RuleKey.of("java","S001")).setName("Rule S001").setDescription("Rule S001 <b>description</b>").setSeverity(Severity.MINOR).setStatus(RuleStatus.BETA).setConfigKey("InternalKeyS001").setLanguage("xoo").setDefaultRemediationFunction("LINEAR_OFFSET").setDefaultRemediationGapMultiplier("5d").setDefaultRemediationBaseEffort("10h").setRemediationFunction(null).setRemediationGapMultiplier(null).setRemediationBaseEffort(null);
  ruleDao.insert(session,ruleDto);
  session.commit();
  session.clearCache();
  WsTester.TestRequest request=wsTester.newGetRequest("api/rules","show").setParam("key",ruleDto.getKey().toString());
  WsTester.Result response=request.execute();
  response.assertJson(getClass(),"show_rule_with_default_debt_infos.json");
}
