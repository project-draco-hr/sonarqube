{
  final long now=system2.now();
  MassUpdate massUpdate=context.prepareMassUpdate();
  massUpdate.select("SELECT s.created_at, s.updated_at, s.locked_at, s.id FROM semaphores s WHERE created_at_ms IS NULL");
  massUpdate.update("UPDATE semaphores SET created_at_ms=?, updated_at_ms=?, locked_at_ms=? WHERE id=?");
  massUpdate.rowPluralName("semaphores");
  massUpdate.execute(new MassUpdate.Handler(){
    @Override public boolean handle(    Select.Row row,    SqlStatement update) throws SQLException {
      for (int i=1; i <= 3; i++) {
        Date date=row.getDate(i);
        update.setLong(i,date == null ? null : Math.min(now,date.getTime()));
      }
      Long id=row.getLong(4);
      update.setLong(4,id);
      return true;
    }
  }
);
}
