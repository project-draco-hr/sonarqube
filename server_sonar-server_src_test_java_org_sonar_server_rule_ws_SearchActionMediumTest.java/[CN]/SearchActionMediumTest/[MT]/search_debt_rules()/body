{
  insertDebtCharacteristics(dbSession);
  ruleDao.insert(dbSession,RuleTesting.newXooX1().setDefaultSubCharacteristicId(hardReliabilityId).setDefaultRemediationFunction(DebtRemediationFunction.Type.LINEAR_OFFSET.name()).setDefaultRemediationCoefficient("1h").setDefaultRemediationOffset("15min").setSubCharacteristicId(null).setRemediationFunction(null).setRemediationCoefficient(null).setRemediationOffset(null));
  dbSession.commit();
  WsTester.TestRequest request=tester.wsTester().newGetRequest(API_ENDPOINT,API_SEARCH_METHOD);
  request.setParam(WebService.Param.FIELDS,"debtChar,debtCharName,debtSubChar,debtSubCharName,debtRemFn,debtOverloaded,defaultDebtChar,defaultDebtSubChar,defaultDebtRemFn");
  request.setParam(WebService.Param.FACETS,"debt_characteristics");
  WsTester.Result result=request.execute();
  result.assertJson(this.getClass(),"search_debt_rule.json");
}
