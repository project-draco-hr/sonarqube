{
  return StatementChunker.builder().ignore(from("import"),to(";")).ignore(from("package"),to(";")).statement(new BridgeWithExceptionTokenMatcher("{","}",";")).ignore(token("}")).ignore(token("{")).ignore(token(";")).statement(from("@"),anyToken(),opt(bridge("(",")"))).statement(from("do")).statement(from("if"),bridge("(",")")).statement(from("else"),token("if"),bridge("(",")")).statement(from("else")).statement(from("for"),bridge("(",")")).statement(from("while"),bridge("(",")")).statement(from("case"),to(":")).statement(from("default"),to(":")).statement(to(";","{","}"),forgetLastToken()).build();
}
