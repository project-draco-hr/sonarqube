{
  Boolean facet=(request.paramAsBoolean(PARAM_FACETS) != null) ? request.paramAsBoolean(PARAM_FACETS) : false;
  return new QueryContext().addFieldsToReturn(request.paramAsStrings(PARAM_FIELDS)).setFacet(facet).setPage(request.mandatoryParamAsInt(PARAM_PAGE),request.mandatoryParamAsInt(PARAM_PAGE_SIZE));
}
