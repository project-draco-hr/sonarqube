{
  final DefaultIssue defaultIssue=(DefaultIssue)issue;
  final UserSession userSession=UserSession.get();
  return Iterables.find(workflow.outTransitions(issue),new Predicate<Transition>(){
    @Override public boolean apply(    Transition input){
      return input.key().equals(transition) && (StringUtils.isBlank(input.requiredProjectPermission()) || userSession.hasProjectPermission(input.requiredProjectPermission(),defaultIssue.projectKey()));
    }
  }
,null) != null;
}
