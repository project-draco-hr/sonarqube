{
  this.empty=false;
  if (!alreadyLoggedInvalidCharacter && c == '\ufffd') {
    LOG.warn("Invalid character encountered in file " + file + " at line "+ lines+ " for encoding "+ encoding+ ". Please fix file content or configure the encoding to be used using property '"+ CoreProperties.ENCODING_PROPERTY+ "'.");
    alreadyLoggedInvalidCharacter=true;
  }
}
