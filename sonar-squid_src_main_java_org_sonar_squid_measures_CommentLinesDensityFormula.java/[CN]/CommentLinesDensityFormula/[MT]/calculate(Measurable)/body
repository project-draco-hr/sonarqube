{
  if ((measurable.getDouble(Metric.LINES_OF_CODE) + measurable.getDouble(Metric.COMMENT_LINES_WITHOUT_HEADER)) != 0) {
    return measurable.getDouble(Metric.COMMENT_LINES_WITHOUT_HEADER) / (measurable.getDouble(Metric.LINES_OF_CODE) + measurable.getDouble(Metric.COMMENT_LINES_WITHOUT_HEADER));
  }
  return 0;
}
