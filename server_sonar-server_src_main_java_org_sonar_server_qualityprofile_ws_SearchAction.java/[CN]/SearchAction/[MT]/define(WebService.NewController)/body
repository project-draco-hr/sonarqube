{
  NewAction search=controller.createAction("search").setSince("5.2").setDescription("List quality profiles.").setHandler(this).addFieldsParam(ALL_FIELDS).setResponseExample(getClass().getResource("example-search.json"));
  search.createParam(PARAM_LANGUAGE).setDescription("The key of a language supported by the platform. If specified, only profiles for the given language are returned.").setPossibleValues(LanguageParamUtils.getLanguageKeys(languages));
}
