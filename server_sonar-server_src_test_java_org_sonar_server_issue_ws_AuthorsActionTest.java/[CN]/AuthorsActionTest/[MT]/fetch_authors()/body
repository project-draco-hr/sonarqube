{
  String query="luke";
  int pageSize=42;
  when(service.listAuthors(query,pageSize)).thenReturn(Arrays.asList("luke.skywalker","luke@skywalker.name"));
  tester.newGetRequest("api/issues","authors").setParam("q",query).setParam("ps",Integer.toString(pageSize)).execute().assertJson(getClass(),"authors.json");
  verify(service).listAuthors(query,pageSize);
}
