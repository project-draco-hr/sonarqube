{
  FakeBatchSaver saver=new FakeBatchSaver(getMyBatis(),new FakeRuleFinder());
  DefaultIssueComment comment=DefaultIssueComment.create("ABCDE","emmerik","the comment");
  comment.setKey("FGHIJ");
  Date date=DateUtils.parseDate("2013-05-18");
  DefaultIssue issue=new DefaultIssue().setKey("ABCDE").setNew(true).setRuleKey(RuleKey.of("squid","AvoidCycle")).setLine(5000).setDebt(Duration.create(10L)).setReporter("emmerik").setResolution("OPEN").setStatus("OPEN").setSeverity("BLOCKER").setAttribute("foo","bar").addComment(comment).setCreationDate(date).setUpdateDate(date).setCloseDate(date).setComponentUuid("component-uuid").setProjectUuid("project-uuid").setComponentKey("struts:Action");
  saver.save(session,issue);
  session.commit();
  checkTables("should_insert_new_issues",new String[]{"id","created_at","updated_at","issue_change_creation_date"},"issues","issue_changes");
}
