{
  List<SnapshotFilter> filters=Lists.newArrayList();
  filters.add(new KeepLibrarySnapshotFilter());
  filters.add(new KeepSnapshotsBetweenTwoDatesFilter(new Date(),dateToStartKeepingOneSnapshotByWeek));
  filters.add(new KeepOneSnapshotByPeriodBetweenTwoDatesFilter(GregorianCalendar.WEEK_OF_YEAR,dateToStartKeepingOneSnapshotByWeek,dateToStartKeepingOneSnapshotByMonth));
  filters.add(new KeepOneSnapshotByPeriodBetweenTwoDatesFilter(GregorianCalendar.MONTH,dateToStartKeepingOneSnapshotByMonth,dateToStartDeletingAllSnapshots));
  filters.add(new KeepLastSnapshotFilter());
  return filters;
}
