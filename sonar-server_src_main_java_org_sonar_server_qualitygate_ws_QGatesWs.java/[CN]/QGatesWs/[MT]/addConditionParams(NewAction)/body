{
  action.createParam(PARAM_METRIC).setDescription("Condition metric").setRequired(true).setExampleValue("blocker_violations");
  action.createParam(PARAM_OPERATOR).setDescription("Condition operator. EQ = equals, NE = is not, LT = is lower than, GT = is greater than").setExampleValue(QualityGateConditionDto.OPERATOR_EQUALS).setPossibleValues(QualityGateConditionDto.ALL_OPERATORS);
  action.createParam(PARAM_PERIOD).setDescription("Condition period").setExampleValue("1");
  action.createParam(PARAM_WARNING).setDescription("Condition warning threshold").setExampleValue("5");
  action.createParam(PARAM_ERROR).setDescription("Condition error threshold").setExampleValue("10");
}
