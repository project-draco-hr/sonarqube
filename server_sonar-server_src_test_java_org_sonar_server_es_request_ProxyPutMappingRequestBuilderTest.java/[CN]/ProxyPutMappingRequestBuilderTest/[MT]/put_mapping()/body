{
  try {
    PutMappingRequestBuilder requestBuilder=searchClient.preparePutMapping(IndexDefinition.RULE.getIndexName()).setType(IndexDefinition.RULE.getIndexType()).setIgnoreConflicts(true).setSource(mapDomain());
    requestBuilder.get();
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalStateException.class);
    assertThat(e.getMessage()).contains("Fail to execute ES put mapping request");
  }
}
