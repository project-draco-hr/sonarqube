{
  assertThat(LoggingConfiguration.create().setVerbose(true).getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_ROOT_VERBOSE));
  assertThat(LoggingConfiguration.create().setVerbose(false).getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_ROOT_DEFAULT));
  assertThat(LoggingConfiguration.create().setRootLevel("ERROR").getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is("ERROR"));
}
