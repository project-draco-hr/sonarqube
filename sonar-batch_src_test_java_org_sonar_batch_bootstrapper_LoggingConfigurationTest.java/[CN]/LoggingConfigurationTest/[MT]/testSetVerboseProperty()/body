{
  Map<String,String> properties=Maps.newHashMap();
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_ROOT_DEFAULT));
  properties.put("sonar.verbose","true");
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_ROOT_VERBOSE));
  properties.put("sonar.verbose","false");
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_ROOT_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_ROOT_DEFAULT));
}
