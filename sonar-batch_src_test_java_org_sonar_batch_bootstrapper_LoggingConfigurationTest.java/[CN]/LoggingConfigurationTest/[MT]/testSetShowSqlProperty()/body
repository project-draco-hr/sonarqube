{
  Map<String,String> properties=Maps.newHashMap();
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_SQL_DEFAULT));
  properties.put("sonar.showSql","true");
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_SQL_VERBOSE));
  properties.put("sonar.showSql","false");
  assertThat(LoggingConfiguration.create().setProperties(properties).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_SQL_DEFAULT));
}
