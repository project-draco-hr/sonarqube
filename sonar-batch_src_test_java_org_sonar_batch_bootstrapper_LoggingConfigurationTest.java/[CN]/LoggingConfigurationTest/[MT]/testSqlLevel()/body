{
  assertThat(LoggingConfiguration.create().setShowSql(true).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_SQL_VERBOSE));
  assertThat(LoggingConfiguration.create().setShowSql(false).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is(LoggingConfiguration.LEVEL_SQL_DEFAULT));
  assertThat(LoggingConfiguration.create().setSqlLevel("ERROR").getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL),Is.is("ERROR"));
}
