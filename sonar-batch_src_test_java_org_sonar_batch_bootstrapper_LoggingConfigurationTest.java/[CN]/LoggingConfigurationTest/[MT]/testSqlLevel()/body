{
  assertThat(LoggingConfiguration.create(null).setShowSql(true).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL)).isEqualTo(LoggingConfiguration.LEVEL_SQL_VERBOSE);
  assertThat(LoggingConfiguration.create(null).setShowSql(false).getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL)).isEqualTo(LoggingConfiguration.LEVEL_SQL_DEFAULT);
  assertThat(LoggingConfiguration.create(null).setSqlLevel("ERROR").getSubstitutionVariable(LoggingConfiguration.PROPERTY_SQL_LOGGER_LEVEL)).isEqualTo("ERROR");
}
