{
  db.issueDao().insert(session,IssueTesting.newDto(rule,file,project).setTags(ImmutableSet.of("convention","java8","bug")),IssueTesting.newDto(rule,file,project).setTags(ImmutableSet.of("convention","bug")),IssueTesting.newDto(rule,file,project),IssueTesting.newDto(rule,file,project).setTags(ImmutableSet.of("convention")));
  session.commit();
  index();
  assertThat(service.listTagsForComponent(project.uuid(),5)).includes(entry("convention",3L),entry("bug",2L),entry("java8",1L));
  assertThat(service.listTagsForComponent(project.uuid(),2)).includes(entry("convention",3L),entry("bug",2L)).excludes(entry("java8",1L));
  assertThat(service.listTagsForComponent("other",10)).isEmpty();
}
