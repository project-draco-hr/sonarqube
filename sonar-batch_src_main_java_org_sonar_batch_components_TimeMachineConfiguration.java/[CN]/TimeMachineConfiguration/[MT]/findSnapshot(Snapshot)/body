{
  String hql="from " + Snapshot.class.getSimpleName() + " where resourceId=:resourceId and (rootId=:rootSnapshotId or id=:rootSnapshotId)";
  List<Snapshot> snapshots=session.createQuery(hql).setParameter("resourceId",projectSnapshot.getResourceId()).setParameter("rootSnapshotId",projectSnapshot.getId()).setMaxResults(1).getResultList();
  return snapshots.isEmpty() ? null : snapshots.get(0);
}
