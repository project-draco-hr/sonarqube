    WsTester.TestRequest request=tester.newGetRequest("api/sources","hash").setParam("key",componentKey);
    request.execute();
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(NotFoundException.class);
  }
}
