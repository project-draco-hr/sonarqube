{
  activeRules=new ActiveRulesBuilder().build();
  fs=new DefaultFileSystem();
  MetricFinder metricFinder=mock(MetricFinder.class);
  when(metricFinder.findByKey(CoreMetrics.NCLOC_KEY)).thenReturn(CoreMetrics.NCLOC);
  when(metricFinder.findByKey(CoreMetrics.FUNCTION_COMPLEXITY_DISTRIBUTION_KEY)).thenReturn(CoreMetrics.FUNCTION_COMPLEXITY_DISTRIBUTION);
  sensorContext=mock(SensorContext.class);
  settings=new Settings();
  resourcePerspectives=mock(ResourcePerspectives.class);
  ComponentDataCache componentDataCache=mock(ComponentDataCache.class);
  BlockCache blockCache=mock(BlockCache.class);
  project=new Project("myProject");
  adaptor=new SensorContextAdapter(sensorContext,metricFinder,project,resourcePerspectives,settings,fs,activeRules,componentDataCache,blockCache,mock(DuplicationCache.class),mock(SonarIndex.class));
}
