{
  File basedir=new File(resourcesDir(),"exclude_dir_starting_with_dot");
  DefaultModuleFileSystem fileSystem=new DefaultModuleFileSystem(mock(FileHashCache.class)).setBaseDir(basedir).setWorkingDir(temp.newFolder()).addSourceDir(new File(basedir,"src")).setSettings(new Settings());
  List<File> files=fileSystem.files(FileQuery.onSource());
  assertThat(files).hasSize(1);
  assertThat(files.get(0).getName()).isEqualTo("Included.java");
}
