{
  NewController newController=context.newController("api/metric").setDescription("Metrics").setSince("3.2");
  newController.newAction("show").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
    }
  }
);
  NewAction create=newController.newAction("create").setDescription("Create metric").setSince("4.1").setPost(true).setInternal(true).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
    }
  }
);
  create.newParam("key").setDescription("Key of new metric");
  create.newParam("name");
  newController.done();
}
