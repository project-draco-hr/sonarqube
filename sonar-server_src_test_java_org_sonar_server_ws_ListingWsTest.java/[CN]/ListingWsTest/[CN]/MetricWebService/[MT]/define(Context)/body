{
  NewController newController=context.createController("api/metric").setDescription("Metrics").setSince("3.2");
  newController.createAction("show").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
    }
  }
);
  NewAction create=newController.createAction("create").setDescription("Create metric").setSince("4.1").setPost(true).setInternal(true).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
    }
  }
);
  create.createParam("key").setDescription("Key of new metric");
  create.createParam("name");
  newController.done();
}
