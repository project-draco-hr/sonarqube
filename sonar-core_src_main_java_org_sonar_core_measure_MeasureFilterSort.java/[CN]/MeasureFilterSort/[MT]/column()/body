{
  String column;
switch (field) {
case KEY:
    column="p.kee";
  break;
case NAME:
column="p.long_name";
break;
case SHORT_NAME:
column="p.name";
break;
case DESCRIPTION:
column="p.description";
break;
case VERSION:
column="s.version";
break;
case LANGUAGE:
column="p.language";
break;
case DATE:
column="s.created_at";
break;
case PROJECT_CREATION_DATE:
column="p.created_at";
break;
case METRIC:
if (metric.isNumericType()) {
column=(period != null ? "pmsort.variation_value_" + period : "pmsort.value");
}
 else {
column="pmsort.text_value";
}
break;
default :
throw new IllegalArgumentException("Unsupported sorting: " + field);
}
return column;
}
