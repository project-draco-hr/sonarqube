{
  User user=mock(User.class);
  when(user.name()).thenReturn("Simon");
  when(userFinder.findByLogin("simon")).thenReturn(user);
  Notification notification=new Notification("issue-changes").setFieldValue("projectName","Struts").setFieldValue("projectKey","org.apache:struts").setFieldValue("changeAuthor","simon");
  EmailMessage message=template.format(notification);
  assertThat(message.getFrom()).isEqualTo("Simon");
}
