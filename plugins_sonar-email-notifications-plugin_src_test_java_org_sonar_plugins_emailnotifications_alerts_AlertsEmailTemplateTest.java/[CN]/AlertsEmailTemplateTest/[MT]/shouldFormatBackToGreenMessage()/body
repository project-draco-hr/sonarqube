{
  Notification notification=createNotification("Green (was Red)","","OK","false");
  EmailMessage message=template.format(notification);
  assertThat(message.getMessageId(),is("alerts/45"));
  assertThat(message.getSubject(),is("\"Foo\" is back to green"));
  assertThat(message.getMessage(),is("" + "Project: Foo\n" + "Alert level: Green (was Red)\n"+ "\n"+ "\n"+ "See it in Sonar: http://nemo.sonarsource.org/dashboard/index/org.sonar.foo:foo"));
}
