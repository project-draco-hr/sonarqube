{
  Notification notification=newNotification(project,"new-issues").setDefaultMessage(newIssues + " new issues on " + project.getLongName()+ ".").setFieldValue("projectDate",DateUtils.formatDateTime(project.getAnalysisDate())).setFieldValue("count",String.valueOf(newIssues));
  notificationsManager.scheduleForSending(notification);
  return notification;
}
