{
  RuleDto templateRule=createTemplateRule();
  NewCustomRule newRule=NewCustomRule.createForCustomRule("CUSTOM_RULE",templateRule.getKey()).setName("My custom").setHtmlDescription("Some description").setSeverity("INVALID").setStatus(RuleStatus.READY).setParameters(ImmutableMap.of("regex","a.*"));
  try {
    creator.create(newRule);
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(BadRequestException.class).hasMessage("coding_rules.validation.invalid_severity");
  }
}
