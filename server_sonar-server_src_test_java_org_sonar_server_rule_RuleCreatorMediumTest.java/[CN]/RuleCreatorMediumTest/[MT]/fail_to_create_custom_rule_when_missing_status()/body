{
  RuleDto templateRule=createTemplateRule();
  NewRule newRule=NewRule.createForCustomRule("CUSTOM_RULE",templateRule.getKey()).setName("My custom").setHtmlDescription("Some description").setSeverity(Severity.MAJOR).setParameters(ImmutableMap.of("regex","a.*"));
  try {
    creator.create(newRule);
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalArgumentException.class).hasMessage("The status is missing");
  }
}
