{
  WebService.NewAction action=context.createAction(ACTION).setDescription("Add permission to a user.<br /> " + "If the project id or project key is provided, a project permission is created.<br />" + "Requires 'Administer System' permission.").setSince("5.2").setPost(true).setHandler(this);
  createPermissionParameter(action);
  createUserLoginParameter(action);
  createProjectUuidParameter(action);
  createProjectKeyParameter(action);
}
