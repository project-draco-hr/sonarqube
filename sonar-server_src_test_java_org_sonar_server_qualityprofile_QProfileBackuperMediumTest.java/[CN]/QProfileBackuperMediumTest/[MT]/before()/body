{
  tester.clearDbAndIndexes();
  db=tester.get(DbClient.class);
  dbSession=db.openSession(false);
  RuleDto xooRule1=RuleTesting.newDto(RuleKey.of("xoo","x1")).setSeverity("MINOR").setLanguage("xoo");
  RuleDto xooRule2=RuleTesting.newDto(RuleKey.of("xoo","x2")).setSeverity("MAJOR").setLanguage("xoo");
  db.ruleDao().insert(dbSession,xooRule1,xooRule2);
  db.ruleDao().addRuleParam(dbSession,xooRule1,RuleParamDto.createFor(xooRule1).setName("max").setDefaultValue("10").setType(RuleParamType.INTEGER.type()));
  dbSession.commit();
  dbSession.clearCache();
}
