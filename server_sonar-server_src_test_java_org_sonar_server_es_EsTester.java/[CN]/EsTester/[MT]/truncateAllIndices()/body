{
  client.prepareDeleteByQuery(client.prepareState().get().getState().getMetaData().concreteAllIndices()).setQuery(QueryBuilders.matchAllQuery()).get();
  client.prepareRefresh(client.prepareState().get().getState().getMetaData().concreteAllIndices()).setForce(true).get();
  client.prepareFlush(client.prepareState().get().getState().getMetaData().concreteAllIndices()).get();
}
