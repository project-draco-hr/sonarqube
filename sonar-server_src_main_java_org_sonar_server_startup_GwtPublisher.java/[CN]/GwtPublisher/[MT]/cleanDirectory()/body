{
  try {
    if (outputDir != null && outputDir.exists()) {
      File[] files=outputDir.listFiles();
      if (files != null) {
        for (        File file : files) {
          if (!file.isHidden()) {
            if (file.isDirectory()) {
              FileUtils.deleteDirectory(file);
              FileUtils.deleteDirectory(file);
            }
 else {
              file.delete();
            }
          }
        }
      }
    }
  }
 catch (  IOException e) {
    LOG.warn("can not clean the directory " + outputDir,e);
  }
}
