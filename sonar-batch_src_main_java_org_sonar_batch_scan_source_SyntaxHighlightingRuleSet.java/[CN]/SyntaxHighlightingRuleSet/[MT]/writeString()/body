{
  StringBuilder sb=new StringBuilder();
  List<SyntaxHighlightingRule> orderedRules=getOrderedHighlightingRules();
  for (  SyntaxHighlightingRule highlightingRule : orderedRules) {
    sb.append(highlightingRule.getStartPosition()).append(FIELD_SEPARATOR).append(highlightingRule.getEndPosition()).append(FIELD_SEPARATOR).append(highlightingRule.getTextType()).append(RULE_SEPARATOR);
  }
  return sb.toString();
}
