{
  WebService.NewAction action=controller.createAction(ACTION).setDescription("Change type of issue, for instance from 'code smell' to 'bug'. Requires authentication and Browse permission on project.").setSince("5.5").setHandler(this).setPost(true);
  action.createParam("issue").setDescription("Key of the issue").setRequired(true).setExampleValue(Uuids.UUID_EXAMPLE_01);
  action.createParam("type").setDescription("New type").setRequired(true).setPossibleValues(RuleType.ALL_NAMES);
}
