{
  if (_hasProject) {
    if (!ComponentPermissions.ALL.contains(_permission)) {
      throw new BadRequestException(String.format("Value of parameter '%s' (%s) for project permissions must be one of %s.",PARAM_PERMISSION,_permission,PROJECT_PERMISSIONS_ONE_LINE));
    }
  }
 else   if (!GlobalPermissions.ALL.contains(_permission)) {
    throw new BadRequestException(String.format("Value of parameter '%s' (%s) for global permissions must be one of: %s.",PARAM_PERMISSION,_permission,GLOBAL_PERMISSIONS_ONE_LINE));
  }
}
