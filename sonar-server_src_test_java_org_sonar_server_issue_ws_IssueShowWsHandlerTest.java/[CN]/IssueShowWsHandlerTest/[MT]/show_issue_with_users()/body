{
  Issue issue=createStandardIssue().setAssignee("john").setReporter("steven").setAuthorLogin("henry");
  issues.add(issue);
  result.addUsers(Lists.<User>newArrayList(new DefaultUser().setLogin("john").setName("John"),new DefaultUser().setLogin("steven").setName("Steven"),new DefaultUser().setLogin("henry").setName("Henry")));
  MockUserSession.set();
  SimpleRequest request=new SimpleRequest().setParam("key",issue.key());
  tester.execute("show",request).assertJson(getClass(),"show_issue_with_users.json");
}
