{
  String issueKey="ABCD";
  Issue issue=new DefaultIssue().setKey(issueKey).setComponentKey("org.sonar.server.issue.IssueClient").setProjectKey("org.sonar.Sonar").setRuleKey(RuleKey.of("squid","AvoidCycle")).setLine(12).setEffortToFix(2.0).setMessage("Fix it").setReporter("steven").setResolution("FIXED").setStatus("CLOSED").setSeverity("MAJOR").setActionPlanKey("AP-ABCD").setAssignee("john").setReporter("steven").setAuthorLogin("henry");
  issues.add(issue);
  result.addUsers(Lists.<User>newArrayList(new DefaultUser().setLogin("john").setName("John"),new DefaultUser().setLogin("steven").setName("Steven"),new DefaultUser().setLogin("henry").setName("Henry")));
  MockUserSession.set();
  SimpleRequest request=new SimpleRequest().setParam("key",issueKey);
  tester.execute("show",request).assertJson(getClass(),"show_issue.json");
}
