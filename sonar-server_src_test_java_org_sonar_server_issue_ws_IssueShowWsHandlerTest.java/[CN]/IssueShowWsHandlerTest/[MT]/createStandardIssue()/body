{
  DefaultIssue issue=new DefaultIssue().setKey("ABCD").setComponentKey("org.sonar.server.issue.IssueClient").setProjectKey("org.sonar.Sonar").setRuleKey(RuleKey.of("squid","AvoidCycle")).setCreationDate(DateUtils.parseDateTime("2014-01-22T19:10:03+0100"));
  when(i18n.formatDateTime(any(Locale.class),eq(issue.creationDate()))).thenReturn("Jan 22, 2014 10:03 AM");
  when(i18n.message(any(Locale.class),eq("created"),eq((String)null))).thenReturn("Created");
  return issue;
}
