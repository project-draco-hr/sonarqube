{
  Issue issue=createStandardIssue().setCreationDate(DateUtils.parseDateTime("2014-01-22T19:10:03+0100")).setUpdateDate(DateUtils.parseDateTime("2014-01-23T19:10:03+0100")).setCloseDate(DateUtils.parseDateTime("2014-01-24T19:10:03+0100"));
  issues.add(issue);
  MockUserSession.set();
  SimpleRequest request=new SimpleRequest().setParam("key",issue.key());
  tester.execute("show",request).assertJson(getClass(),"show_issue_with_dates.json");
}
