{
  SearchRequestBuilder builder=index.client().prepareSearch(INDEX_RULES).setTypes(TYPE_RULE).setPostFilter(filterBuilder).setSize(paging.pageSize()).setFrom(paging.offset());
  if (fields.length > 0) {
    builder.addFields(fields);
  }
  addOrder(query,builder);
  return index.executeRequest(builder);
}
