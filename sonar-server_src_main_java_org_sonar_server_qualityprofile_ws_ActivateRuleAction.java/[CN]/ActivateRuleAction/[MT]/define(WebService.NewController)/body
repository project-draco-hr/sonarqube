{
  WebService.NewAction action=controller.createAction("activate_rule").setHandler(this).setPost(true).setSince("4.4");
  action.createParam("profile_lang").setRequired(true);
  action.createParam("profile_name").setRequired(true);
  action.createParam("rule_repo").setRequired(true);
  action.createParam("rule_key").setRequired(true);
  action.createParam("severity").setPossibleValues(Severity.ALL);
  action.createParam("params");
}
