{
  try {
    if (platform != null) {
      platform.doStop();
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  platform=null;
  try {
    if (searchServer != null) {
      searchServer.stop();
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  searchServer=null;
  FileUtils.deleteQuietly(homeDir);
}
