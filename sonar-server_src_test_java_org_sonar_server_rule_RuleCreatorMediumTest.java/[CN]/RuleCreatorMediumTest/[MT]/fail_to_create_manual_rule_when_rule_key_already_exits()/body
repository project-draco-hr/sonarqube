{
  NewRule newRule=NewRule.createForManualRule("MANUAL_RULE").setName("My manual").setHtmlDescription("Some description");
  creator.create(newRule);
  try {
    newRule=NewRule.createForManualRule("MANUAL_RULE").setName("My other manual").setHtmlDescription("Some description");
    creator.create(newRule);
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalArgumentException.class).hasMessage("A rule with the key 'MANUAL_RULE' already exits");
  }
}
