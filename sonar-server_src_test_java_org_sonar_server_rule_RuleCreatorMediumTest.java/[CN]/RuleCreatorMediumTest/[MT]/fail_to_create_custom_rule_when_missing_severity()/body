{
  RuleDto templateRule=createTemplateRule();
  NewRule newRule=new NewRule().setTemplateKey(templateRule.getKey()).setName("My custom").setHtmlDescription("Some description").setStatus(RuleStatus.READY).setParameters(ImmutableMap.of("regex","a.*"));
  try {
    creator.create(newRule);
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalArgumentException.class).hasMessage("The severity is missing");
  }
}
