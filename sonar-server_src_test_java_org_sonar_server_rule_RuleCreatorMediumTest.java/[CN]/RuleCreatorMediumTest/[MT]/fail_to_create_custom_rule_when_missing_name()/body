{
  RuleDto templateRule=createTemplateRule();
  NewRule newRule=new NewRule().setTemplateKey(templateRule.getKey()).setHtmlDescription("Some description").setSeverity(Severity.MAJOR).setStatus(RuleStatus.READY).setParams(newArrayList(new NewRuleParam("regex").setDefaultValue("a.*")));
  try {
    creator.create(newRule);
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalArgumentException.class).hasMessage("The name is missing");
  }
}
