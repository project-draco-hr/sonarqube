{
  return new MetricFilter<Measure>(metric){
    public Measure filter(    Collection<Measure> measures){
      if (measures == null) {
        return null;
      }
      for (      Measure measure : measures) {
        if (measure.getClass().equals(Measure.class) && measure.getMetric().equals(metric) && measure.getPersonId() == null && isSameRequirement(measure,requirement)) {
          return measure;
        }
      }
      return null;
    }
  }
;
}
