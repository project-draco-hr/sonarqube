{
  BulkIndexer bulk=new BulkIndexer(esClient,INDEX);
  bulk.setDisableRefresh(false);
  bulk.start();
  SearchRequestBuilder search=esClient.prepareSearch(INDEX).setTypes(TYPE_ISSUE,TYPE_AUTHORIZATION).setRouting(uuid).setQuery(boolQuery().must(termQuery(FIELD_ISSUE_PROJECT_UUID,uuid)));
  bulk.addDeletion(search);
  bulk.stop();
}
