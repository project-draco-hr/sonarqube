{
  List<Issue> issues=createIssuesForNewMetrics();
  assertThat(decorator.countIssuesAfterDate(null,fiveDaysAgo)).isEqualTo(0);
  assertThat(decorator.countIssuesAfterDate(issues,fiveDaysAgo)).isEqualTo(1);
  assertThat(decorator.countIssuesAfterDate(issues,tenDaysAgo)).isEqualTo(3);
  assertThat(decorator.countIssuesAfterDate(issues,sameSecond)).isEqualTo(0);
}
