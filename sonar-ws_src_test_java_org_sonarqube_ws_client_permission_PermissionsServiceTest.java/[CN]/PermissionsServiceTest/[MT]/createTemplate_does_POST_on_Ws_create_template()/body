{
  underTest.createTemplate(new CreateTemplateWsRequest().setName(NAME_VALUE).setDescription(DESCRIPTION_VALUE).setProjectKeyPattern(PROJECT_KEY_PATTERN_VALUE));
  assertThat(serviceTester.getPostParser()).isSameAs(WsPermissions.CreateTemplateWsResponse.parser());
  PostRequest postRequest=serviceTester.getPostRequest();
  serviceTester.assertThat(postRequest).hasPath("create_template").hasParam(PARAM_NAME,NAME_VALUE).hasParam(PARAM_DESCRIPTION,DESCRIPTION_VALUE).hasParam(PARAM_PROJECT_KEY_PATTERN,PROJECT_KEY_PATTERN_VALUE).andNoOtherParam();
}
