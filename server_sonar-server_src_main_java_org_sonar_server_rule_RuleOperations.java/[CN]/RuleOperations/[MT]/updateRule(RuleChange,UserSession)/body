{
  checkPermission(userSession);
  DbSession session=dbClient.openSession(false);
  try {
    RuleDto ruleDto=dbClient.deprecatedRuleDao().getNullableByKey(session,ruleChange.ruleKey());
    if (ruleDto == null) {
      throw new NotFoundException(String.format("Unknown rule '%s'",ruleChange.ruleKey()));
    }
    boolean needUpdate=updateRule(ruleDto,ruleChange.debtRemediationFunction(),ruleChange.debtRemediationCoefficient(),ruleChange.debtRemediationOffset(),session);
    if (needUpdate) {
      session.commit();
    }
  }
 catch (  IllegalArgumentException e) {
    throw new BadRequestException(e.getMessage());
  }
 finally {
    MyBatis.closeQuietly(session);
  }
}
