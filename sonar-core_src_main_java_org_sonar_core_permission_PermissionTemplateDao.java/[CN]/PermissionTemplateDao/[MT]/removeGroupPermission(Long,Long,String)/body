{
  PermissionTemplateGroupDto permissionTemplateGroup=new PermissionTemplateGroupDto().setTemplateId(templateId).setPermission(permission).setGroupId(groupId);
  SqlSession session=myBatis.openSession(false);
  try {
    PermissionTemplateMapper mapper=session.getMapper(PermissionTemplateMapper.class);
    mapper.deleteGroupPermission(permissionTemplateGroup);
    session.commit();
  }
  finally {
    MyBatis.closeQuietly(session);
  }
}
