{
  Connection connection=null;
  try {
    connection=datasource.getConnection();
    DdlUtils.createSchema(connection,"h2");
  }
 catch (  SQLException e) {
    throw new IllegalStateException("Fail to create schema",e);
  }
 finally {
    if (connection != null) {
      try {
        connection.close();
      }
 catch (      SQLException e) {
      }
    }
  }
}
