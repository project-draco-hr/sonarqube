  assertThat(htmlOutput).containsExactly("<span class=\"cppd\">/**</span>","<span class=\"cppd\"> * Definition of a dashboard.</span>","<span class=\"cppd\"> * &lt;p/&gt;</span>","<span class=\"cppd\"> * Its name and description can be retrieved using the i18n mechanism, using the keys \"dashboard.&amp;lt;id&amp;gt;.name\" and</span>","<span class=\"cppd\"> * \"dashboard.&amp;lt;id&amp;gt;.description\".</span>","<span class=\"cppd\"> *</span>","<span class=\"cppd\"> * @since 2.13</span>","<span class=\"cppd\"> */</span>");
}
