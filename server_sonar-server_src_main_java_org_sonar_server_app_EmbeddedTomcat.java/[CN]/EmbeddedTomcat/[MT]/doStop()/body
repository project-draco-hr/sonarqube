{
  try {
    if (tomcat != null && !stopping) {
      stopping=true;
      tomcat.stop();
      tomcat.destroy();
    }
    tomcat=null;
    stopping=false;
    ready=false;
    FileUtils.deleteQuietly(tomcatBasedir());
  }
 catch (  LifecycleException e) {
    throw new IllegalStateException("Fail to stop web server",e);
  }
}
