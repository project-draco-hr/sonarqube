{
  DefaultIssue issue=new DefaultIssue().setKey("ABCDE").setStatus(STATUS_OPEN).setRuleKey(RuleKey.of(MANUAL_REPOSITORY_KEY,"Performance")).setBeingClosed(true);
  workflow.start();
  workflow.doAutomaticTransition(issue,mock(IssueChangeContext.class));
  assertThat(issue.resolution()).isEqualTo(RESOLUTION_FIXED);
  assertThat(issue.status()).isEqualTo(STATUS_CLOSED);
}
