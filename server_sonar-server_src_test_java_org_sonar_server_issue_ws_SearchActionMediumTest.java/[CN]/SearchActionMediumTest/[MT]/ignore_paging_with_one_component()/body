{
  for (int i=0; i < QueryContext.MAX_LIMIT + 1; i++) {
    IssueDto issue=IssueTesting.newDto(rule,file,project);
    tester.get(IssueDao.class).insert(session,issue);
  }
  session.commit();
  WsTester.Result result=wsTester.newGetRequest(IssuesWs.API_ENDPOINT,SearchAction.SEARCH_ACTION).setParam(IssueFilterParameters.COMPONENTS,file.getKey()).setParam(IssueFilterParameters.IGNORE_PAGING,"true").execute();
  result.assertJson(this.getClass(),"ignore_paging_with_one_component.json",false);
}
