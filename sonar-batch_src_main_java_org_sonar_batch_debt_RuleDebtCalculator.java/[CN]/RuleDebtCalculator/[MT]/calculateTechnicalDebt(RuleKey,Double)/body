{
  Requirement requirement=model.requirementsByRule(ruleKey);
  if (requirement != null) {
    if (requirement.function().equals(DefaultRequirement.CONSTANT_ISSUE) && effortToFix != null) {
      throw new IllegalArgumentException("Requirement for '" + ruleKey + "' can not use 'Constant/issue' remediation function "+ "because this rule does not have a fixed remediation cost.");
    }
    return calculateTechnicalDebt(requirement,effortToFix);
  }
  return null;
}
