{
  Connection prev=getConnection(recv);
  if (prev != null) {
    try {
      prev.close();
    }
 catch (    Exception e) {
    }
  }
  IRubyObject rubyconn=recv.getRuntime().getNil();
  if (c != null) {
    rubyconn=wrappedConnection(recv,c);
  }
  rubyApi.setInstanceVariable(recv,"@connection",rubyconn);
  recv.dataWrapStruct(c);
  return recv;
}
