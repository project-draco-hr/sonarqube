{
  try {
    if (code.popTo(matcher,tmpBuilder) > 0) {
      consume(tmpBuilder,output);
      tmpBuilder.delete(0,tmpBuilder.length());
      return true;
    }
    return false;
  }
 catch (  StackOverflowError e) {
    throw new IllegalArgumentException("The regular expression " + regex + " has led to a stack overflow error. "+ "This error is certainly due to an inefficient use of alternations. See http://bugs.sun.com/bugdatabase/view_bug.do?bug_id=5050507",e);
  }
}
