{
  String fileKey="src/Foo.java";
  MockUserSession.set().addComponentPermission(UserRole.CODEVIEWER,"polop",fileKey);
  when(componentDao.getByKey(session,fileKey)).thenReturn(file);
  when(sourceService.getLinesAsHtml(eq(file.uuid()),anyInt(),anyInt())).thenReturn(newArrayList("/*"," * Header"," */","","public class <span class=\"sym-31 sym\">HelloWorld</span> {","}"));
  WsTester.TestRequest request=tester.newGetRequest("api/sources","show").setParam("key",fileKey);
  request.execute().assertJson(getClass(),"show_source.json");
}
