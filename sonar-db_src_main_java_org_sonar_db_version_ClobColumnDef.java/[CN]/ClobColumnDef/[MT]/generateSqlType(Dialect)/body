{
switch (dialect.getId()) {
case MsSql.ID:
    return "NVARCHAR (MAX)";
case MySql.ID:
  return "LONGTEXT";
case Oracle.ID:
return "CLOB";
case H2.ID:
return "CLOB(2147483647)";
case PostgreSql.ID:
return "TEXT";
default :
throw new IllegalArgumentException("Unsupported dialect id " + dialect.getId());
}
}
