{
  NewController controller=context.newController("api/rule_tags").setDescription("Rule tags");
  controller.newAction("list").setDescription("List all available rule tags").setSince("4.2").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      list(response);
    }
  }
);
  controller.newAction("create").setPost(true).setDescription("Create a new rule tag").setSince("4.2").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      create(request,response);
    }
  }
).newParam("tag").setDescription("Value of the new rule tag");
  controller.done();
}
