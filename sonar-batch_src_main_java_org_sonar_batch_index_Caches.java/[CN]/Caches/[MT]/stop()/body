{
  for (  Entry<String,Exchange> e : caches.entrySet()) {
    persistit.releaseExchange(e.getValue());
  }
  caches.clear();
  if (volume != null) {
    try {
      volume.close();
      volume.delete();
    }
 catch (    PersistitException e) {
      throw new IllegalStateException("Fail to close caches",e);
    }
    volume=null;
  }
}
