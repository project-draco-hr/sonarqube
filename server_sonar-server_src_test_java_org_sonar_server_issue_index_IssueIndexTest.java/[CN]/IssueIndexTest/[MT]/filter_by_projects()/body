{
  ComponentDto project=ComponentTesting.newProjectDto();
  ComponentDto module=ComponentTesting.newModuleDto(project);
  ComponentDto subModule=ComponentTesting.newModuleDto(module);
  indexIssues(IssueTesting.newDoc("ISSUE1",project),IssueTesting.newDoc("ISSUE2",ComponentTesting.newFileDto(project)),IssueTesting.newDoc("ISSUE3",module),IssueTesting.newDoc("ISSUE4",ComponentTesting.newFileDto(module)),IssueTesting.newDoc("ISSUE5",subModule),IssueTesting.newDoc("ISSUE6",ComponentTesting.newFileDto(subModule)));
  assertThat(index.search(IssueQuery.builder().projectUuids(newArrayList(project.uuid())).build(),new SearchOptions()).getDocs()).hasSize(6);
  assertThat(index.search(IssueQuery.builder().projectUuids(newArrayList("unknown")).build(),new SearchOptions()).getDocs()).isEmpty();
}
