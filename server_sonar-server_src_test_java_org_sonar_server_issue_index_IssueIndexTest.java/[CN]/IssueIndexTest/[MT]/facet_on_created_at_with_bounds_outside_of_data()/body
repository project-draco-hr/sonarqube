{
  SearchOptions options=fixtureForCreatedAtFacet();
  Map<String,Long> createdAt=index.search(IssueQuery.builder().createdAfter(DateUtils.parseDate("2009-01-01")).createdBefore(DateUtils.parseDate("2016-01-01")).build(),options).getFacets().get("createdAt");
  assertThat(createdAt).containsOnly(entry("2009-01-01T01:00:00+0000",0L),entry("2010-01-01T01:00:00+0000",0L),entry("2011-01-01T01:00:00+0000",1L),entry("2012-01-01T01:00:00+0000",0L),entry("2013-01-01T01:00:00+0000",0L),entry("2014-01-01T01:00:00+0000",5L),entry("2015-01-01T01:00:00+0000",1L),entry("2016-01-01T01:00:00+0000",0L));
}
