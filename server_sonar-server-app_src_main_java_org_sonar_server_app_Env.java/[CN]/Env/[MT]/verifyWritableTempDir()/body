{
  File file=null;
  try {
    file=File.createTempFile("sonarqube-check","tmp");
  }
 catch (  IOException e) {
    throw new IllegalStateException("Unable to create file in temporary directory, please check existence " + "and permissions of: " + FileUtils.getTempDirectory(),e);
  }
 finally {
    FileUtils.deleteQuietly(file);
  }
}
