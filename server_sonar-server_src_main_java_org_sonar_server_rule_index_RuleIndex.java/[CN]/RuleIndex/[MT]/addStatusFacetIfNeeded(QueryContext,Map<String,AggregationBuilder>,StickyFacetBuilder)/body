{
  if (options.facets().contains(FACET_STATUSES)) {
    BoolFilterBuilder facetFilter=stickyFacetBuilder.getStickyFacetFilter(RuleNormalizer.RuleField.STATUS.field());
    AggregationBuilder statuses=AggregationBuilders.filter(FACET_STATUSES + "_filter").filter(facetFilter).subAggregation(AggregationBuilders.terms(FACET_STATUSES).field(RuleNormalizer.RuleField.STATUS.field()).include(Joiner.on('|').join(ALL_STATUSES_EXCEPT_REMOVED)).exclude(RuleStatus.REMOVED.toString()).size(ALL_STATUSES_EXCEPT_REMOVED.size()));
    aggregations.put(FACET_STATUSES,AggregationBuilders.global(FACET_STATUSES).subAggregation(statuses));
  }
}
