{
  Date t0=new Date();
  service.write(dbSession,Activity.Type.SERVER,testValue);
  service.write(dbSession,Activity.Type.SERVER,testValue);
  dbSession.commit();
  Date t1=new Date();
  service.write(dbSession,Activity.Type.SERVER,testValue);
  dbSession.commit();
  Date t2=new Date();
  assertThat(service.search(new ActivityQuery().setSince(t0),new QueryOptions()).getHits()).hasSize(3);
  assertThat(service.search(new ActivityQuery().setSince(t1),new QueryOptions()).getHits()).hasSize(1);
  assertThat(service.search(new ActivityQuery().setSince(t2),new QueryOptions()).getHits()).hasSize(0);
}
