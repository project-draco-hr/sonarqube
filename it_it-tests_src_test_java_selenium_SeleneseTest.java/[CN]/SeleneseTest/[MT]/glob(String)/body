{
  String expectedGlob=pattern.replaceFirst("glob:","");
  expectedGlob=expectedGlob.replaceAll("([\\]\\[\\\\{\\}$\\(\\)\\|\\^\\+.])","\\\\$1");
  expectedGlob=expectedGlob.replaceAll("\\*",".*");
  expectedGlob=expectedGlob.replaceAll("\\?",".");
  return Pattern.compile(expectedGlob,Pattern.DOTALL);
}
