{
  if (proxyHost != null) {
    request.useProxy(proxyHost,proxyPort);
    if (proxyLogin != null) {
      request.proxyBasic(proxyLogin,proxyPassword);
    }
  }
  request.acceptGzipEncoding().uncompress(true).acceptJson().acceptCharset(HttpRequest.CHARSET_UTF8).connectTimeout(connectTimeoutInMilliseconds).readTimeout(readTimeoutInMilliseconds).trustAllCerts().trustAllHosts();
  if (login != null) {
    request.basic(login,password);
  }
  return request;
}
