{
  if (template.uuid() != null) {
    return checkFound(dbClient.permissionTemplateDao().selectByUuid(dbSession,template.uuid()),format("Permission template with id '%s' is not found",template.uuid()));
  }
 else {
    return checkFound(dbClient.permissionTemplateDao().selectByName(dbSession,template.name()),format("Permission template with name '%s' is not found (case insensitive)",template.name()));
  }
}
