{
  checkRequest(groupId != null ^ groupName != null,"Group name or group id must be provided, not both.");
  if (isAnyone(groupName)) {
    return null;
  }
  GroupDto group=null;
  if (groupId != null) {
    group=checkFound(dbClient.groupDao().selectById(dbSession,groupId),format("Group with id '%d' is not found",groupId));
  }
  if (groupName != null) {
    group=checkFound(dbClient.groupDao().selectByName(dbSession,groupName),format("Group with name '%s' is not found",groupName));
  }
  return group;
}
