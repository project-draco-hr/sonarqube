{
  UserSession.get().checkLoggedIn().checkGlobalPermission(GlobalPermissions.SYSTEM_ADMIN);
  String login=request.mandatoryParam(PARAM_LOGIN);
  UpdateUser updateUser=UpdateUser.create(login).setPassword(request.mandatoryParam(PARAM_PASSWORD)).setPasswordConfirmation(request.mandatoryParam(PARAM_PASSWORD_CONFIRMATION));
  userUpdater.update(updateUser);
  response.noContent();
}
