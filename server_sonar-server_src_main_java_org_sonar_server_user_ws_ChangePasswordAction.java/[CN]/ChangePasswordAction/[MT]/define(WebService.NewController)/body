{
  WebService.NewAction action=controller.createAction("change_password").setDescription("Update a user's password. Authenticated users can change their own password, " + "provided that the account is not linked to an external authentication system. " + "Administer System permission is required to change another user's password.").setSince("5.2").setPost(true).setHandler(this);
  action.createParam(PARAM_LOGIN).setDescription("User login").setRequired(true).setExampleValue("myuser");
  action.createParam(PARAM_PASSWORD).setDescription("New password").setRequired(true).setExampleValue("mypassword");
}
