{
  File dir=temp.newFolder();
  underTest.checkWritableDir(dir.getAbsolutePath());
  dir.delete();
  try {
    underTest.checkWritableDir(dir.getAbsolutePath());
    fail();
  }
 catch (  IllegalStateException e) {
    assertThat(e).hasMessage("Temp directory is not writable: " + dir.getAbsolutePath());
  }
}
