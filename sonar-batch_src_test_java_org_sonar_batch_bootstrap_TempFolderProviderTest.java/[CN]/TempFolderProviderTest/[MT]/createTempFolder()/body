{
  File workingDir=temp.newFolder();
  TempFolderProvider tempFolderProvider=new TempFolderProvider();
  TempFolder tempFolder=tempFolderProvider.provide(new BootstrapSettings(new BootstrapProperties(ImmutableMap.of(CoreProperties.WORKING_DIRECTORY,workingDir.getAbsolutePath()))));
  tempFolder.newDir();
  tempFolder.newFile();
  assertThat(new File(workingDir,".sonartmp")).exists();
  assertThat(new File(workingDir,".sonartmp").list()).hasSize(2);
}
