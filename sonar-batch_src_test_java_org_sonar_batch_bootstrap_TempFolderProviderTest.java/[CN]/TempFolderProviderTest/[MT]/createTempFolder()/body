{
  File workingDir=temp.newFolder();
  TempFolder tempFolder=new TempFolderProvider().provide(new BootstrapSettings(new BootstrapProperties(ImmutableMap.of(CoreProperties.WORKING_DIRECTORY,workingDir.getAbsolutePath()))));
  tempFolder.newDir();
  tempFolder.newFile();
  assertThat(new File(workingDir,"tmp")).exists();
  assertThat(new File(workingDir,"tmp").list()).hasSize(2);
  ((DefaultTempFolder)tempFolder).stop();
  assertThat(new File(workingDir,"tmp")).doesNotExist();
}
