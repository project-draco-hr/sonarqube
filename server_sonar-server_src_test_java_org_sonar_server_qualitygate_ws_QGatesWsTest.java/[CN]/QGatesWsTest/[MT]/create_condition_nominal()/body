{
  long qGateId=42L;
  String metricKey="coverage";
  String operator="LT";
  String warningThreshold="80";
  String errorThreshold="75";
  when(qGates.createCondition(qGateId,metricKey,operator,warningThreshold,errorThreshold,null)).thenReturn(new QualityGateConditionDto().setId(12345L).setQualityGateId(qGateId).setMetricId(10).setMetricKey(metricKey).setOperator(operator).setWarningThreshold(warningThreshold).setErrorThreshold(errorThreshold));
  tester.newPostRequest("api/qualitygates","create_condition").setParam("gateId",Long.toString(qGateId)).setParam("metric",metricKey).setParam("op",operator).setParam("warning",warningThreshold).setParam("error",errorThreshold).execute().assertJson("{\"id\":12345,\"metric\":\"coverage\",\"op\":\"LT\",\"warning\":\"80\",\"error\":\"75\"}");
}
