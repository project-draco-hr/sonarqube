{
  SearchRequestBuilder request=searchClient.prepareSearch(IndexDefinition.ISSUES.getIndexName()).setQuery(QueryBuilders.filteredQuery(QueryBuilders.matchAllQuery(),FilterBuilders.hasParentFilter(IndexDefinition.ISSUES_AUTHENTICATION.getIndexType(),FilterBuilders.boolFilter().must(FilterBuilders.termFilter("permission","read"),FilterBuilders.orFilter(FilterBuilders.termFilter("group",group),FilterBuilders.termFilter("user",user))).cache(true)))).setSize(Integer.MAX_VALUE);
  return searchClient.execute(request);
}
