{
  super(new OutputStream(){
    @Override public void write(    final int b){
      value.ensureFit(1);
      value._bytes[value._size++]=(byte)b;
    }
    @Override public void write(    final byte[] bytes){
      write(bytes,0,bytes.length);
    }
    @Override public void write(    final byte[] bytes,    final int offset,    final int size){
      value.ensureFit(size);
      System.arraycopy(bytes,offset,value._bytes,value._size,size);
      value._size+=size;
    }
  }
);
  _value=value;
}
