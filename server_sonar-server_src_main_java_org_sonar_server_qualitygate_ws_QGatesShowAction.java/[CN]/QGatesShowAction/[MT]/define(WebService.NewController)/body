{
  WebService.NewAction action=controller.createAction("show").setDescription("Display the details of a quality gate").setSince("4.3").setResponseExample(Resources.getResource(this.getClass(),"example-show.json")).setHandler(this);
  action.createParam(QGatesWs.PARAM_ID).setDescription("ID of the quality gate. Either id or name must be set").setExampleValue("1");
  action.createParam(QGatesWs.PARAM_NAME).setDescription("Name of the quality gate. Either id or name must be set").setExampleValue("My Quality Gate");
}
