{
  WebService.NewAction action=context.createAction(ACTION).setDescription("Add permission to a group.<br /> Requires 'Administer System' permission.").setSince("5.2").setPost(true).setHandler(this);
  action.createParam(PARAM_PERMISSION).setDescription("Permission").setRequired(true).setPossibleValues(GlobalPermissions.ALL);
  action.createParam(PARAM_GROUP_NAME).setRequired(true).setDescription("Group name or 'anyone' (whatever the case)").setExampleValue("sonar-administrators");
}
