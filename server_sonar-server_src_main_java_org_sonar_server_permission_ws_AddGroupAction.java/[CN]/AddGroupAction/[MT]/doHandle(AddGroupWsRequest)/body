{
  DbSession dbSession=dbClient.openSession(false);
  try {
    PermissionChange permissionChange=permissionChangeBuilder.buildGroupPermissionChange(dbSession,request.getPermission(),newOptionalWsProjectRef(request.getProjectId(),request.getProjectKey()),newWsGroupRef(request.getGroupId(),request.getGroupName()));
    permissionUpdater.addPermission(permissionChange);
  }
  finally {
    dbClient.closeSession(dbSession);
  }
}
