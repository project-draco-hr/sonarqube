{
  Date creationDate=now();
  PermissionTemplateDto permissionTemplate=new PermissionTemplateDto().setName(templateName).setKee(generateTemplateKey(templateName)).setDescription(description).setKeyPattern(projectPattern).setCreatedAt(creationDate).setUpdatedAt(creationDate);
  DbSession session=myBatis.openSession(false);
  try {
    return insert(session,permissionTemplate);
  }
  finally {
    MyBatis.closeQuietly(session);
  }
}
