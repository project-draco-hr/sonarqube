{
  WebService.NewAction createCondition=controller.createAction("update_condition").setDescription("Update a condition attached to a quality gate. Require Administer Quality Gates permission").setPost(true).setSince("4.3").setHandler(this);
  createCondition.createParam(QualityGatesWs.PARAM_ID).setDescription("Condition ID").setRequired(true).setExampleValue("10");
  QualityGatesWs.addConditionParams(createCondition);
}
