{
  WebService.NewAction createCondition=controller.createAction(ACTION_UPDATE_CONDITION).setDescription("Update a condition attached to a quality gate. Require Administer Quality Gates permission").setPost(true).setSince("4.3").setHandler(this);
  createCondition.createParam(PARAM_ID).setDescription("Condition ID").setRequired(true).setExampleValue("10");
  addConditionParams(createCondition);
}
