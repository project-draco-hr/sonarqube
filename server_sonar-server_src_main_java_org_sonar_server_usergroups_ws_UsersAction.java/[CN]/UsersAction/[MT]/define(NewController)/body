{
  NewAction action=context.createAction("users").setDescription("Search for users with membership information with respect to a group.").setHandler(this).setResponseExample(getClass().getResource("example-users.json")).setSince("5.2");
  action.createParam(PARAM_ID).setDescription("A group ID").setExampleValue("42").setRequired(true);
  action.addSelectionModeParam();
  action.addSearchQuery("freddy","names","logins");
  action.addPagingParams(25);
}
