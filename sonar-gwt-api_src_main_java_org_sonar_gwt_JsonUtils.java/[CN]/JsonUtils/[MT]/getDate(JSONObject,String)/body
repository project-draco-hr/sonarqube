{
  String date=getString(json,field);
  if (date != null) {
    DateTimeFormat frmt=DateTimeFormat.getFormat("yyyy-MM-dd'T'HH:mm:ssZ");
    if (date.endsWith("Z") && date.length() > 2) {
      date=date.substring(0,date.length() - 2) + "+0000";
    }
    return frmt.parse(date);
  }
  return null;
}
