{
  Project project=new Project("key").setName("LongName");
  project.setId(45);
  PastSnapshot pastSnapshot=new PastSnapshot("",null);
  when(timeMachineConfiguration.getProjectPastSnapshots()).thenReturn(Lists.newArrayList(pastSnapshot));
