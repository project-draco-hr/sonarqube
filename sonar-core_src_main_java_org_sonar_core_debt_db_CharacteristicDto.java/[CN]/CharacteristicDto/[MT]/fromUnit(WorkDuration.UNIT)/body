{
  if (unit != null) {
    if (WorkDuration.UNIT.DAYS.equals(unit)) {
      return DAYS;
    }
 else     if (WorkDuration.UNIT.HOURS.equals(unit)) {
      return HOURS;
    }
 else     if (WorkDuration.UNIT.MINUTES.equals(unit)) {
      return MINUTES;
    }
    throw new IllegalStateException("Invalid unit : " + unit);
  }
  return null;
}
