{
  if (unit != null) {
    if (unit.equals(WorkDuration.UNIT.DAYS)) {
      return DAYS;
    }
 else     if (unit.equals(WorkDuration.UNIT.HOURS)) {
      return HOURS;
    }
 else     if (unit.equals(WorkDuration.UNIT.MINUTES)) {
      return MINUTES;
    }
    throw new IllegalStateException("Invalid unit : " + unit);
  }
  return null;
}
