{
  PermissionTemplateDto permissionTemplate=new PermissionTemplateDto().setName(templateName).setDescription(description).setCreatedAt(now()).setUpdatedAt(now());
  SqlSession session=myBatis.openSession();
  try {
    PermissionTemplateMapper mapper=session.getMapper(PermissionTemplateMapper.class);
    mapper.insert(permissionTemplate);
    session.commit();
  }
  finally {
    MyBatis.closeQuietly(session);
  }
  return permissionTemplate;
}
