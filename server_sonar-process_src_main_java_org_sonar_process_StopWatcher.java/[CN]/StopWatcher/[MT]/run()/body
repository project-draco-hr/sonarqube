{
  try {
    while (watching) {
      if (commands.askedForStop()) {
        LoggerFactory.getLogger(getClass()).info("Stopping process");
        stoppable.stopAsync();
        watching=false;
      }
 else {
        try {
          Thread.sleep(delayMs);
        }
 catch (        InterruptedException ignored) {
          watching=false;
        }
      }
    }
  }
  finally {
    commands.endWatch();
  }
}
