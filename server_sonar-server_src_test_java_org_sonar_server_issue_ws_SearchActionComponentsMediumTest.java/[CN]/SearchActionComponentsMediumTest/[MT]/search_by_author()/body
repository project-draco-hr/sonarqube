{
  ComponentDto project=insertComponent(ComponentTesting.newProjectDto("ABCD").setKey("MyProject"));
  setDefaultProjectPermission(project);
  ComponentDto file=insertComponent(ComponentTesting.newFileDto(project,"BCDE").setKey("MyComponent"));
  RuleDto newRule=newRule();
  IssueDto issue1=IssueTesting.newDto(newRule,file,project).setAuthorLogin("leia").setKee("2bd4eac2-b650-4037-80bc-7b112bd4eac2");
  IssueDto issue2=IssueTesting.newDto(newRule,file,project).setAuthorLogin("luke@skywalker.name").setKee("82fd47d4-b650-4037-80bc-7b1182fd47d4");
  db.issueDao().insert(session,issue1,issue2);
  session.commit();
  tester.get(IssueIndexer.class).indexAll();
  wsTester.newGetRequest(IssuesWs.API_ENDPOINT,SearchAction.SEARCH_ACTION).setParam(IssueFilterParameters.AUTHORS,"leia").setParam(WebService.Param.FACETS,"authors").execute().assertJson(this.getClass(),"search_by_authors.json",false);
  wsTester.newGetRequest(IssuesWs.API_ENDPOINT,SearchAction.SEARCH_ACTION).setParam(IssueFilterParameters.AUTHORS,"unknown").execute().assertJson(this.getClass(),"no_issue.json",false);
}
