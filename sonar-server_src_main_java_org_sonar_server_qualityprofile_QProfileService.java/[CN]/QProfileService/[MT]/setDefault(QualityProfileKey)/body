{
  verifyAdminPermission();
  DbSession dbSession=db.openSession(false);
  try {
    QualityProfileDto profile=db.qualityProfileDao().getNonNullByKey(dbSession,key);
    db.propertiesDao().setProperty(new PropertyDto().setKey("sonar.profile." + profile.getLanguage()).setValue(profile.getName()));
    dbSession.commit();
  }
  finally {
    dbSession.close();
  }
}
