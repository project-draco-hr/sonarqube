{
  Statement stmt=connection.createStatement();
  ResultSet rs=null;
  try {
    rs=stmt.executeQuery("select count(1) from " + table);
    if (rs.next()) {
      return rs.getInt(1) > 0;
    }
  }
 catch (  SQLException ignored) {
  }
 finally {
    DbUtils.closeQuietly(rs);
    DbUtils.closeQuietly(stmt);
  }
  return false;
}
