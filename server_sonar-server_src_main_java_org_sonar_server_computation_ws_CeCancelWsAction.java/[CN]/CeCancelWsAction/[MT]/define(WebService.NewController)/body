{
  WebService.NewAction action=controller.createAction("cancel").setDescription("Cancels a pending task. Requires system administration permission.").setInternal(true).setPost(true).setHandler(this);
  action.createParam(PARAM_TASK_ID).setDescription("Optional id of the task to cancel.").setExampleValue(Uuids.UUID_EXAMPLE_01);
  action.createParam(PARAM_ALL).setDescription("Cancels all pending tasks if this parameter is set. Ignored if the parameter " + PARAM_TASK_ID + " is set.").setBooleanPossibleValues().setDefaultValue("false");
}
