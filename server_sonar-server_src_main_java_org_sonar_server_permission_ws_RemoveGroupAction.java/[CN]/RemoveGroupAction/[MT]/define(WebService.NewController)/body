{
  WebService.NewAction action=context.createAction(ACTION).setDescription("Remove a permission from a group.<br /> " + "This service defaults to global permissions, but can be limited to project permissions by providing project id or project key.<br /> " + "The group id or group name must be provided, not both.<br />"+ "It requires administration permissions to access.").setSince("5.2").setPost(true).setHandler(this);
  createPermissionParameter(action);
  createGroupNameParameter(action);
  createGroupIdParameter(action);
  createProjectParameters(action);
}
