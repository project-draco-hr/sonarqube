{
  Issue issue=new DefaultIssue().setKey("ABCD").setComponentKey("sample:src/main/xoo/sample/Sample.xoo").setProjectKey("sample").setRuleKey(RuleKey.of("squid","AvoidCycle"));
  MockUserSession.set().setLogin("john");
  Action action=mock(Action.class);
  when(action.key()).thenReturn("link-to-jira");
  when(actionService.listAvailableActions(eq(issue))).thenReturn(newArrayList(action));
  testActions(issue,"{\"actions\": " + "[" + "\"comment\", \"assign\", \"assign_to_me\", \"plan\", \"link-to-jira\"\n"+ "]}");
}
