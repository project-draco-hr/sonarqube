{
  injectUsers(1);
  assertThat(tester.newGetRequest("api/users","search2").execute().outputAsString()).contains("login").contains("name").contains("email").contains("scmAccounts");
  assertThat(tester.newGetRequest("api/users","search2").setParam("f","").execute().outputAsString()).contains("login").contains("name").contains("email").contains("scmAccounts");
  assertThat(tester.newGetRequest("api/users","search2").setParam("f","login").execute().outputAsString()).contains("login").doesNotContain("name").doesNotContain("email").doesNotContain("scmAccounts");
  assertThat(tester.newGetRequest("api/users","search2").setParam("f","scmAccounts").execute().outputAsString()).doesNotContain("login").doesNotContain("name").doesNotContain("email").contains("scmAccounts");
}
