{
  WebService.NewAction action=controller.createAction("set_severity").setDescription("Change severity. Requires authentication and Browse permission on project").setSince("3.6").setHandler(RailsHandler.INSTANCE).setPost(true);
  action.createParam("issue").setDescription("Key of the issue").setRequired(true).setExampleValue("5bccd6e8-f525-43a2-8d76-fcb13dde79ef");
  action.createParam("severity").setDescription("New severity").setExampleValue(Severity.BLOCKER).setPossibleValues(Severity.ALL);
  RailsHandler.addFormatParam(action);
}
