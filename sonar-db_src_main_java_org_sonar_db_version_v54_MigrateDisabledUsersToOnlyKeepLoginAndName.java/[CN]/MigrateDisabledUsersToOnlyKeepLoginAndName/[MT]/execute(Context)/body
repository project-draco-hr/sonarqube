{
  MassUpdate update=context.prepareMassUpdate().rowPluralName("users");
  update.select("SELECT u.id FROM users u WHERE u.active=? " + "AND email IS NOT NULL " + "AND scm_accounts IS NOT NULL "+ "AND external_identity IS NOT NULL "+ "AND external_identity_provider IS NOT NULL "+ "AND crypted_password IS NOT NULL "+ "AND salt IS NOT NULL "+ "AND remember_token IS NOT NULL "+ "AND remember_token_expires_at IS NOT NULL ").setBoolean(1,false);
