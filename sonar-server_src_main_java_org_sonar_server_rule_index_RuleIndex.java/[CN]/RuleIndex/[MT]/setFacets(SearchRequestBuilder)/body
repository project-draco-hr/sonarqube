{
  query.addAggregation(AggregationBuilders.terms("languages").field(RuleNormalizer.RuleField.LANGUAGE.field()).order(Terms.Order.count(false)).size(10).minDocCount(1));
  query.addAggregation(AggregationBuilders.terms("tags").field(RuleNormalizer.RuleField._TAGS.field()).order(Terms.Order.count(false)).size(10).minDocCount(1));
  query.addAggregation(AggregationBuilders.terms("repositories").field(RuleNormalizer.RuleField.REPOSITORY.field()).order(Terms.Order.count(false)).size(10).minDocCount(1));
}
