{
  QueryBuilder qb;
  if (query.getQueryText() != null && !query.getQueryText().isEmpty()) {
    qb=QueryBuilders.multiMatchQuery(query.getQueryText(),RuleNormalizer.RuleField.NAME.field(),RuleNormalizer.RuleField.NAME.field() + ".search",RuleNormalizer.RuleField.HTML_DESCRIPTION.field(),RuleNormalizer.RuleField.KEY.field(),RuleNormalizer.RuleField.KEY.field() + ".search",RuleNormalizer.RuleField.LANGUAGE.field(),RuleNormalizer.RuleField.CHARACTERISTIC.field(),RuleNormalizer.RuleField.SUB_CHARACTERISTIC.field(),RuleNormalizer.RuleField._TAGS.field());
  }
 else {
    qb=QueryBuilders.matchAllQuery();
  }
  return qb;
}
