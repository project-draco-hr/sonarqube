{
  action.createParam(PARAM_PROFILE_KEY).setDescription("A quality profile key. Either this parameter, or a combination of profileName + language must be set.").setExampleValue("sonar-way-java-12345");
  action.createParam(PARAM_PROFILE_NAME).setDescription("A quality profile name. If this parameter is set, profileKey must not be set and language must be set to disambiguate.").setExampleValue("Sonar way");
  action.createParam(PARAM_LANGUAGE).setDescription("A quality profile language. If this parameter is set, profileKey must not be set and profileName must be set to disambiguate.").setPossibleValues(LanguageParamUtils.getLanguageKeys(languages)).setExampleValue("js");
}
