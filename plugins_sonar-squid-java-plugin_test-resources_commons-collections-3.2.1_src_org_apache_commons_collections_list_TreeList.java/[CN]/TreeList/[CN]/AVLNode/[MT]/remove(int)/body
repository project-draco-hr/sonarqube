{
  int indexRelativeToMe=index - relativePosition;
  if (indexRelativeToMe == 0) {
    return removeSelf();
  }
  if (indexRelativeToMe > 0) {
    setRight(right.remove(indexRelativeToMe),right.right);
    if (relativePosition < 0) {
      relativePosition++;
    }
  }
 else {
    setLeft(left.remove(indexRelativeToMe),left.left);
    if (relativePosition > 0) {
      relativePosition--;
    }
  }
  recalcHeight();
  return balance();
}
