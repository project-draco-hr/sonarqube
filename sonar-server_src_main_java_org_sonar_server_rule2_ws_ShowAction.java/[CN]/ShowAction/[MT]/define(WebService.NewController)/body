{
  WebService.NewAction action=controller.createAction("show").setDescription("Get detailed information about a rule").setSince("4.2").setResponseExample(Resources.getResource(getClass(),"example-show.json")).setHandler(this);
  action.createParam("repo").setDescription("Repository key. It's not marked as required for backward-compatibility reasons.").setExampleValue("javascript");
  action.createParam("key").setDescription("Rule key. The format including the repository key is deprecated " + "but still supported, for example 'javascript:EmptyBlock'.").setRequired(true).setExampleValue("EmptyBlock");
}
