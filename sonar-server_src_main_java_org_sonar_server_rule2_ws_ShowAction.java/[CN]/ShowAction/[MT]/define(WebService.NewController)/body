{
  WebService.NewAction action=controller.createAction("show").setDescription("Get detailed information about a rule").setSince("4.2").setResponseExample(Resources.getResource(getClass(),"example-show.json")).setHandler(this);
  action.createParam(PARAM_KEY).setDescription("Rule key").setRequired(true).setExampleValue("javascript:EmptyBlock");
  action.createParam(PARAM_ACTIVES).setDescription("Show rule's activations for all profiles (\"active rules\")").setBooleanPossibleValues().setDefaultValue(false);
}
