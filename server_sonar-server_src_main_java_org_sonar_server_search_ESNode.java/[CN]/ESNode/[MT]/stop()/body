{
  if (client != null) {
    client.close();
    client=null;
  }
  if (node != null) {
    LoggerFactory.getLogger(this.getClass()).info("Shutting down In Memory ES");
    node.close();
    while (!node.isClosed()) {
      try {
        Thread.sleep(100);
      }
 catch (      InterruptedException e) {
      }
    }
    node=null;
  }
}
