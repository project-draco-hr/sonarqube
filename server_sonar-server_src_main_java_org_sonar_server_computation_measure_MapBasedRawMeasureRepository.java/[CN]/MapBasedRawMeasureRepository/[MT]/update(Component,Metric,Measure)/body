{
  requireNonNull(component);
  checkValueTypeConsistency(metric,measure);
  Optional<Measure> existingMeasure=find(component,metric,measure);
  if (!existingMeasure.isPresent()) {
    throw new UnsupportedOperationException(format("a measure can be updated only if one already exists for a specific Component (key=%s), Metric (key=%s)%s. Use add method",component.getKey(),metric.getKey(),buildRuleOrCharacteristicMsgPart(measure)));
  }
  add(component,metric,measure,OverridePolicy.OVERRIDE);
}
