{
  if (notification instanceof CommentOnReviewNotification) {
    CommentOnReviewNotification event=(CommentOnReviewNotification)notification;
    EmailMessage email=new EmailMessage().setFrom(event.getAuthor().getName()).setMessageId("review/" + event.getReview().getId()).setSubject(event.getReview().getTitle()).setMessage(event.getComment());
    return email;
  }
  return null;
}
