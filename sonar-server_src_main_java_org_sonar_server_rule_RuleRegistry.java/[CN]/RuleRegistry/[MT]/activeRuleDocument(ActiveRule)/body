{
  XContentBuilder document=XContentFactory.jsonBuilder().startObject().field("id",rule.getId()).field("severity",rule.getSeverity()).field("profileId",rule.getRulesProfile().getId()).field("inheritance",rule.getInheritance());
  if (!rule.getActiveRuleParams().isEmpty()) {
    document.startArray("params");
    for (    ActiveRuleParam param : rule.getActiveRuleParams()) {
      document.startObject().field("key",param.getKey()).field("value",param.getValue()).endObject();
    }
    document.endArray();
  }
  document.endObject();
  return document;
}
