{
  try {
    register(new Rules(){
      @Override public void init(      RulesDefinition.NewRepository repository){
        RulesDefinition.NewRule rule=repository.createRule("x1").setName("x1 name").setHtmlDescription("x1 desc");
        rule.setDebtSubCharacteristic("REUSABILITY").setDebtRemediationFunction(rule.debtRemediationFunctions().linearWithOffset("1h","30min"));
      }
    }
);
    fail();
  }
 catch (  MessageException e) {
    assertThat(e).hasMessage("Rule 'xoo:x1' cannot be linked on the root characteristic 'REUSABILITY'");
  }
}
