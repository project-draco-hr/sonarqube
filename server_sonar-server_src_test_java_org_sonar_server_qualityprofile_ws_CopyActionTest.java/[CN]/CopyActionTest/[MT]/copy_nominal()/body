{
  userSessionRule.login("obiwan").setGlobalPermissions(GlobalPermissions.QUALITY_PROFILE_ADMIN);
  String fromProfileKey="xoo-sonar-way-23456";
  String toName="Other Sonar Way";
  when(qProfileCopier.copyToName(fromProfileKey,toName)).thenReturn(QualityProfileDto.createFor("xoo-other-sonar-way-12345").setName(toName).setLanguage("xoo"));
  tester.newPostRequest("api/qualityprofiles","copy").setParam("fromKey",fromProfileKey).setParam("toName",toName).execute().assertJson(getClass(),"copy_nominal.json");
  verify(qProfileCopier).copyToName(fromProfileKey,toName);
}
