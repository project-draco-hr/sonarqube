{
  NewAction create=controller.createAction("create").setSince("5.2").setDescription("Create a quality profile. Require Administer Quality Profiles permission.").setPost(true).setResponseExample(getClass().getResource("example-create.json")).setHandler(this);
  create.createParam(PARAM_PROFILE_NAME).setDescription("The name for the new quality profile.").setExampleValue("My Sonar way").setRequired(true);
  create.createParam(PARAM_LANGUAGE).setDescription("The language for the quality profile.").setExampleValue("js").setPossibleValues(LanguageParamUtils.getLanguageKeys(languages)).setRequired(true);
  for (  ProfileImporter importer : importers) {
    create.createParam(getBackupParamName(importer.getKey())).setDescription(String.format("A configuration file for %s.",importer.getName()));
  }
}
