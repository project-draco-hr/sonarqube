{
  if (ascending) {
    return Ordering.from(new Comparator<Date>(){
      public int compare(      @Nullable Date left,      @Nullable Date right){
        if (left == right) {
          return 0;
        }
        if (left == null) {
          return 1;
        }
        if (right == null) {
          return -1;
        }
        return left.compareTo(right);
      }
    }
);
  }
  return Ordering.from(new Comparator<Date>(){
    public int compare(    @Nullable Date left,    @Nullable Date right){
      if (left == right) {
        return 0;
      }
      if (left == null) {
        return 1;
      }
      if (right == null) {
        return -1;
      }
      return -left.compareTo(right);
    }
  }
);
}
