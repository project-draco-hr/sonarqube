{
  try (DbSession dbSession=dbClient.openSession(false)){
    return from(dbClient.componentDao().selectAllChildren(dbSession,ComponentTreeQuery.builder().setBaseSnapshot(new SnapshotDto().setId(baseProjectSnapshot.getId()).setRootId(baseProjectSnapshot.getId())).setQualifiers(asList(Qualifiers.FILE,Qualifiers.UNIT_TEST_FILE)).setSortFields(singletonList("name")).setPageSize(Integer.MAX_VALUE).setPage(1).build())).uniqueIndex(ComponentDtoFunctions.toKey());
  }
 }
