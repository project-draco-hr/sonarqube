{
  when(permissionDao.selectGlobalPermissions("john")).thenReturn(newArrayList(GlobalPermissions.SYSTEM_ADMIN));
  when(issueFilterDao.selectById(1L)).thenReturn(new IssueFilterDto().setId(1L).setName("My Old Filter").setDescription("Old description").setUserLogin("arthur").setShared(true));
  IssueFilterDto result=underTest.update(new IssueFilterDto().setId(1L).setName("My New Filter").setDescription("New description").setShared(true).setUserLogin("arthur"),userSession);
  assertThat(result.getName()).isEqualTo("My New Filter");
  assertThat(result.getDescription()).isEqualTo("New description");
  verify(issueFilterDao).update(any(IssueFilterDto.class));
}
