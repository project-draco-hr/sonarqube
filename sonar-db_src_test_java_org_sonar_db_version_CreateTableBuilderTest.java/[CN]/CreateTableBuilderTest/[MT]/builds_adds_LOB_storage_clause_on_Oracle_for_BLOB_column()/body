{
  List<String> stmts=new CreateTableBuilder(ORACLE,TABLE_NAME).addColumn(newBlobColumnDefBuilder().setColumnName("blob_1").setIsNullable(false).build()).build();
  assertThat(stmts).hasSize(1);
  assertThat(stmts.iterator().next()).isEqualTo("CREATE TABLE " + TABLE_NAME + " ("+ "blob_1 BLOB NOT NULL)"+ " LOB (blob_1) STORE AS SECUREFILE (RETENTION NONE NOCACHE NOLOGGING)");
}
