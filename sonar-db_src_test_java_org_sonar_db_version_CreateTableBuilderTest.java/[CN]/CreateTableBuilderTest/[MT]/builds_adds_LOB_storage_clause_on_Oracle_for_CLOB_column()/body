{
  List<String> stmts=new CreateTableBuilder(ORACLE,TABLE_NAME).addColumn(newClobColumnDefBuilder().setColumnName("clob_1").setIsNullable(false).build()).build();
  assertThat(stmts).hasSize(1);
  assertThat(stmts.iterator().next()).isEqualTo("CREATE TABLE " + TABLE_NAME + " ("+ "clob_1 CLOB NOT NULL)"+ " LOB (clob_1) STORE AS SECUREFILE (RETENTION NONE NOCACHE NOLOGGING)");
}
