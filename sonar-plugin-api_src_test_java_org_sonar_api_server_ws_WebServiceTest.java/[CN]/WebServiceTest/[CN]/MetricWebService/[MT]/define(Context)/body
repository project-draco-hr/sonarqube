{
  NewController newController=context.createController("api/metric").setDescription("Metrics").setSince("3.2");
  newController.createAction("show").setDescription("Show metric").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      show(request,response);
    }
  }
);
  newController.createAction("create").setDescription("Create metric").setSince("4.1").setPost(true).setInternal(true).setResponseExample(getClass().getResource("/org/sonar/api/server/ws/WebServiceTest/response-example.txt")).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      create(request,response);
    }
  }
);
  newController.done();
}
