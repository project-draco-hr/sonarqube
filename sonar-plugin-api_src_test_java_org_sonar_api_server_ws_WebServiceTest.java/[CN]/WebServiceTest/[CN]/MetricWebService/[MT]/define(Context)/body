{
  NewController newController=context.newController("api/metric").setDescription("Metrics").setSince("3.2");
  newController.newAction("show").setDescription("Show metric").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      show(request,response);
    }
  }
);
  newController.newAction("create").setDescription("Create metric").setSince("4.1").setPost(true).setInternal(true).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      create(request,response);
    }
  }
);
  newController.done();
}
