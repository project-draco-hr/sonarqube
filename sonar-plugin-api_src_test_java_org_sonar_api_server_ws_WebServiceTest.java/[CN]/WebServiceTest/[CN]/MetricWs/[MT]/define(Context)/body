{
  NewController newController=context.createController("api/metric").setDescription("Metrics").setSince("3.2");
  newController.createAction("show").setDescription("Show metric").setSince("4.2").setResponseExample(getClass().getResource("WebServiceTest/response-example.txt")).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      show(request,response);
    }
  }
);
  newController.createAction("create").setDescription("Create metric").setSince("4.1").setDeprecatedSince("5.3").setPost(true).setInternal(true).setResponseExample(getClass().getResource("WebServiceTest/response-example.txt")).setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      create(request,response);
    }
  }
);
  newController.done();
}
