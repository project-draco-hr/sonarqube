{
  NewAction search=controller.createAction("search").setSince("5.2").setDescription("List quality profiles.").setHandler(this).setResponseExample(getClass().getResource("example-search.json"));
  search.createParam(PARAM_LANGUAGE).setDescription("The key of a language supported by the platform. If specified, only profiles for the given language are returned.").setExampleValue("js").setPossibleValues(Collections2.transform(Arrays.asList(languages.all()),new Function<Language,String>(){
    @Override public String apply(    Language input){
      return input.getKey();
    }
  }
));
  search.createParam(PARAM_FIELDS).setDescription("Use to restrict returned fields.").setExampleValue("key,language").setPossibleValues(ALL_FIELDS);
}
