{
  NewAction search=controller.createAction("search").setSince("5.2").setDescription("List quality profiles.").setHandler(this).setResponseExample(getClass().getResource("example-search.json"));
  search.createParam(PARAM_LANGUAGE).setDescription("The key of a language supported by the platform. If specified, only profiles for the given language are returned.").setExampleValue("js").setPossibleValues(LanguageParamUtils.getLanguageKeys(languages));
  search.createParam(Param.FIELDS).setDescription("Use to restrict returned fields.").setExampleValue("key,language").setPossibleValues(ALL_FIELDS);
}
