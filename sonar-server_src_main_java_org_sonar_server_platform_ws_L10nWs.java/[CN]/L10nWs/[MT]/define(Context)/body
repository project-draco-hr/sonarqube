{
  NewController l10n=context.createController("api/l10n");
  l10n.setDescription("Localization").setSince("4.4").createAction("index").setInternal(true).setDescription("Get all localization messages for a given locale").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response) throws Exception {
      serializeMessages(request,response);
    }
  }
).createParam("locale").setDescription("BCP47 language tag, used to override the browser Accept-Language header").setExampleValue("fr-CH");
  l10n.done();
}
