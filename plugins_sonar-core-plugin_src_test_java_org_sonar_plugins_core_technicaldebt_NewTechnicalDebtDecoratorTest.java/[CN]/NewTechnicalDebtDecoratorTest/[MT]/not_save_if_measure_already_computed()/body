{
  when(context.getMeasure(CoreMetrics.NEW_TECHNICAL_DEBT)).thenReturn(new Measure());
  when(issuable.issues()).thenReturn(newArrayList((Issue)new DefaultIssue().setKey("A").setCreationDate(nineDaysAgo).setDebt(fiveDays),new DefaultIssue().setKey("B").setCreationDate(fiveDaysAgo).setDebt(twoDays)));
  decorator.decorate(resource,context);
  verify(context,never()).saveMeasure(argThat(new IsMeasure(CoreMetrics.NEW_TECHNICAL_DEBT)));
}
