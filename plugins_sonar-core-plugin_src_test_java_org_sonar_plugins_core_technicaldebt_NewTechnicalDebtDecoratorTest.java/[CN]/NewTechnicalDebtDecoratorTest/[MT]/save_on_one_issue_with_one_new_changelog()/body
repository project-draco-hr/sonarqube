{
  Issue issue=new DefaultIssue().setKey("A").setCreationDate(tenDaysAgo).setDebt(TWO_DAYS_IN_MINUTES).setChanges(newArrayList(new FieldDiffs().setDiff("technicalDebt",ONE_DAY_IN_MINUTES,TWO_DAYS_IN_MINUTES).setCreationDate(null)));
  when(issuable.issues()).thenReturn(newArrayList(issue));
  decorator.decorate(resource,context);
  verify(context).saveMeasure(argThat(new IsVariationMeasure(CoreMetrics.NEW_TECHNICAL_DEBT,1.0 * ONE_DAY_IN_MINUTES,1.0 * ONE_DAY_IN_MINUTES)));
}
