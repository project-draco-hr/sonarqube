{
  Issue issue=new DefaultIssue().setKey("A").setCreationDate(tenDaysAgo).setDebt(twoDays).setChanges(newArrayList(new FieldDiffs().setDiff("technicalDebt",fromWorkDayDuration(oneDaysWorkDuration),fromWorkDayDuration(twoDaysWorkDuration)).setCreationDate(null)));
  when(issuable.issues()).thenReturn(newArrayList(issue));
  decorator.decorate(resource,context);
  verify(context).saveMeasure(argThat(new IsVariationMeasure(CoreMetrics.NEW_TECHNICAL_DEBT,1.0,1.0)));
}
