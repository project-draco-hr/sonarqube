{
  Issue issue=new DefaultIssue().setKey("A").setCreationDate(tenDaysAgo).setDebt(fiveDays).setChanges(newArrayList(new FieldDiffs().setDiff("technicalDebt",twoDays,fiveDays).setCreationDate(null),new FieldDiffs().setDiff("technicalDebt",oneDay,twoDays).setCreationDate(fourDaysAgo)));
  when(issuable.issues()).thenReturn(newArrayList(issue));
  decorator.decorate(resource,context);
  verify(context).saveMeasure(argThat(new IsVariationMeasure(CoreMetrics.NEW_TECHNICAL_DEBT,4.0,4.0)));
}
