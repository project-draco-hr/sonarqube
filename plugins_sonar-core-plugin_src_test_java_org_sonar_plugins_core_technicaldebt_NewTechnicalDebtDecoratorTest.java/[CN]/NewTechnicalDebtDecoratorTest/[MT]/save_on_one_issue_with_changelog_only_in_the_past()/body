{
  Issue issue=new DefaultIssue().setKey("A").setCreationDate(tenDaysAgo).setTechnicalDebt(oneDaysDebt).setChanges(newArrayList(new FieldDiffs().setDiff("technicalDebt",null,fromWorkDayDuration(oneDaysDebt)).setCreationDate(elevenDaysAgo)));
  when(issuable.issues()).thenReturn(newArrayList(issue));
  decorator.decorate(resource,context);
  verify(context).saveMeasure(argThat(new IsVariationMeasure(CoreMetrics.NEW_TECHNICAL_DEBT,0.0,0.0)));
}
