{
  Issue issue=new DefaultIssue().setKey("A").setCreationDate(tenDaysAgo).setDebt(Duration.create(ONE_DAY_IN_MINUTES)).setChanges(newArrayList(new FieldDiffs().setDiff("technicalDebt",TWO_DAYS_IN_MINUTES,ONE_DAY_IN_MINUTES).setCreationDate(null)));
  when(issuable.issues()).thenReturn(newArrayList(issue));
  decorator.decorate(resource,context);
  verify(context).saveMeasure(argThat(new IsVariationMeasure(CoreMetrics.NEW_TECHNICAL_DEBT,0.0,0.0)));
}
