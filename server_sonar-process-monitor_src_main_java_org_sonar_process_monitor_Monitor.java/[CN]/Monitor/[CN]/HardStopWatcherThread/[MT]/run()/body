{
  while (watch && lifecycle.getState() != Lifecycle.State.STOPPED) {
    if (processCommands.askedForStop()) {
      trace("Stopping process");
      Monitor.this.stop();
    }
 else {
      try {
        Thread.sleep(WATCH_DELAY_MS);
      }
 catch (      InterruptedException ignored) {
      }
    }
  }
}
