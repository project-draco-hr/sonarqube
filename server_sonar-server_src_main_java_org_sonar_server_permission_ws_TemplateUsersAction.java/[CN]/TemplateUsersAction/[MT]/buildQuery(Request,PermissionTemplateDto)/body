{
  String permission=validateProjectPermission(wsRequest.mandatoryParam(PARAM_PERMISSION));
  return PermissionQuery.builder().template(template.getUuid()).permission(permission).membership(fromSelectionModeToMembership(wsRequest.mandatoryParam(Param.SELECTED))).pageIndex(wsRequest.mandatoryParamAsInt(Param.PAGE)).pageSize(wsRequest.mandatoryParamAsInt(Param.PAGE_SIZE)).search(wsRequest.param(Param.TEXT_QUERY)).build();
}
