{
  WebService.NewAction activate=controller.createAction("activate_rules").setDescription("Bulk-activate rules on one or several Quality profiles").setPost(true).setSince("4.4").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response) throws Exception {
      bulkActivate(request,response);
    }
  }
);
  SearchAction.defineRuleSearchParameters(activate);
  defineProfileKeyParameters(activate);
  activate.createParam("activation_severity").setDescription("Severity").setPossibleValues(Severity.ALL);
}
