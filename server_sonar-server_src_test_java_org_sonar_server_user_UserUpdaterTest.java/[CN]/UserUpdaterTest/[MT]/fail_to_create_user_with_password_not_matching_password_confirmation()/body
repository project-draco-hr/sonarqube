{
  try {
    userUpdater.create(NewUser.create().setLogin(DEFAULT_LOGIN).setName("Marius").setEmail("marius@mail.com").setPassword("password").setPasswordConfirmation("password2"));
    fail();
  }
 catch (  BadRequestException e) {
