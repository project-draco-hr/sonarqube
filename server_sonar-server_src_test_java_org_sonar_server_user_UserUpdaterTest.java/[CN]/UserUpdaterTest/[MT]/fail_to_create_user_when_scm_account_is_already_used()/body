{
  db.prepareDbUnit(getClass(),"fail_to_create_user_when_scm_account_is_already_used.xml");
  try {
    userUpdater.create(NewUser.create().setLogin(DEFAULT_LOGIN).setName("Marius").setEmail("marius@mail.com").setPassword("password").setPasswordConfirmation("password").setScmAccounts(newArrayList("jo")));
    fail();
  }
 catch (  BadRequestException e) {
    assertThat(e.errors().messages()).containsOnly(Message.of("user.scm_account_already_used","jo","John (john)"));
  }
}
