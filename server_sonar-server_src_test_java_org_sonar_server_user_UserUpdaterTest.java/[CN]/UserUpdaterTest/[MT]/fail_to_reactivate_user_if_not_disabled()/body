{
  db.prepareDbUnit(getClass(),"fail_to_reactivate_user_if_not_disabled.xml");
  createDefaultGroup();
  try {
    userUpdater.create(NewUser.create().setLogin(DEFAULT_LOGIN).setName("Marius2").setEmail("marius2@mail.com").setPassword("password2").setPasswordConfirmation("password2"));
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalArgumentException.class).hasMessage("An active user with login 'marius' already exists");
  }
}
