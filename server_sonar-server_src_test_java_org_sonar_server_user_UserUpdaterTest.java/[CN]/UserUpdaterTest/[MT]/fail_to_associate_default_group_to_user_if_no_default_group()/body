{
  settings.setProperty(CoreProperties.CORE_DEFAULT_GROUP,(String)null);
  try {
    userUpdater.create(NewUser.create().setLogin("user").setName("User").setEmail("user@mail.com").setPassword("password").setPasswordConfirmation("password").setScmAccounts(newArrayList("u1","u_1")));
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalStateException.class).hasMessage("The default group property 'sonar.defaultGroup' is null");
  }
}
