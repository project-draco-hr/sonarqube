{
  WebService.NewAction action=controller.createAction("add_comment").setDescription("Add a comment. Requires authentication and Browse permission on project").setSince("3.6").setHandler(RailsHandler.INSTANCE).setPost(true);
  action.createParam("issue").setDescription("Key of the issue").setRequired(true).setExampleValue("5bccd6e8-f525-43a2-8d76-fcb13dde79ef");
  action.createParam("text").setDescription("Comment").setExampleValue("blabla...");
  RailsHandler.addFormatParam(action);
}
