{
  WebService.NewAction action=controller.createAction("plan").setDescription("Plan/Unplan an issue. Requires authentication and Browse permission on project").setSince("3.6").setHandler(RailsHandler.INSTANCE).setPost(true);
  action.createParam("issue").setDescription("Key of the issue").setRequired(true).setExampleValue("5bccd6e8-f525-43a2-8d76-fcb13dde79ef");
  action.createParam("plan").setDescription("Key of the action plan").setExampleValue("3f19de90-1521-4482-a737-a311758ff513");
}
