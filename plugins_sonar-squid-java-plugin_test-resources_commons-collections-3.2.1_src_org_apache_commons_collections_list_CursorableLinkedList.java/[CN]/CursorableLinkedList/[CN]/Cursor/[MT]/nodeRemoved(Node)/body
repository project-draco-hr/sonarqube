{
  if (node == next && node == current) {
    next=node.next;
    current=null;
    currentRemovedByAnother=true;
  }
 else   if (node == next) {
    next=node.next;
    currentRemovedByAnother=false;
  }
 else   if (node == current) {
    current=null;
    currentRemovedByAnother=true;
    nextIndex--;
  }
 else {
    nextIndexValid=false;
    currentRemovedByAnother=false;
  }
}
