{
  DefaultIssue issue=new DefaultIssue();
  Transition transition=Transition.builder("close").from("OPEN").to("CLOSED").conditions(condition1,condition2).functions(function1,function2).build();
  transition.execute(issue);
  assertThat(issue.status()).isEqualTo("CLOSED");
  assertThat(issue.updatedAt()).isNotNull();
  verify(function1).execute(issue);
  verify(function2).execute(issue);
}
