{
  Property prop=session.getSingleResult(Property.class,"key",key);
  if (value == null && prop != null) {
    session.removeWithoutFlush(prop);
  }
 else   if (value != null) {
    if (prop == null) {
      prop=new Property(key,value);
    }
 else {
      prop.setValue(value);
    }
    session.saveWithoutFlush(prop);
  }
}
