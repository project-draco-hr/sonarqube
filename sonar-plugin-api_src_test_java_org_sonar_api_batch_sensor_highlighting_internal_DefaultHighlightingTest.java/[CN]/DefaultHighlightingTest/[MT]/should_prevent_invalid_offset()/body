{
  throwable.expect(IllegalArgumentException.class);
  throwable.expectMessage("Invalid endOffset 15. Should be >= 0 and <= 10 for file [moduleKey=foo, relative=src/Foo.java, basedir=null]");
  new DefaultHighlighting(mock(SensorStorage.class)).onFile(new DefaultInputFile("foo","src/Foo.java").setLastValidOffset(10)).highlight(0,10,KEYWORD).highlight(8,15,KEYWORD).save();
}
