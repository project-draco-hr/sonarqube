{
  String templateUuid=wsRequest.mandatoryParam(PARAM_TEMPLATE_ID_EXPLICIT);
  DbSession dbSession=dbClient.openSession(false);
  try {
    PermissionTemplateDto template=finder.getTemplate(dbSession,templateUuid);
    ComponentDto project=finder.getProject(dbSession,WsProjectRef.fromRequest(wsRequest));
    ApplyPermissionTemplateQuery query=ApplyPermissionTemplateQuery.create(template.getUuid(),singletonList(project.key()));
    permissionService.applyPermissionTemplate(query);
  }
  finally {
    dbClient.closeSession(dbSession);
  }
  wsResponse.noContent();
}
