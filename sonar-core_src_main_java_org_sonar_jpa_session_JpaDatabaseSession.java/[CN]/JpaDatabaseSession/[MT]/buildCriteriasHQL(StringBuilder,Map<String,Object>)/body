{
  for (Iterator<String> i=mappedCriterias.keySet().iterator(); i.hasNext(); ) {
    String criteria=i.next();
    hql.append("o.").append(criteria);
    if (mappedCriterias.get(criteria) == null) {
      hql.append(" IS NULL");
    }
 else {
      hql.append("=:").append(criteria);
    }
    if (i.hasNext()) {
      hql.append(" AND ");
    }
  }
}
