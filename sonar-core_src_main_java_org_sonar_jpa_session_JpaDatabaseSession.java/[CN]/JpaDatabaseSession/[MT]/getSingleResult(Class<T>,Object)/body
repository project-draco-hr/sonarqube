{
  try {
    return getSingleResult(getQueryForCriterias(entityClass,true,criterias),(T)null);
  }
 catch (  NonUniqueResultException ex) {
    NonUniqueResultException e=new NonUniqueResultException("Expected single result for entitiy " + entityClass.getSimpleName() + " with criterias : "+ StringUtils.join(criterias,","));
    e.initCause(ex);
    throw e;
  }
}
