{
  writer.beginObject().prop("id",condition.getId()).prop("gateId",condition.getQualityGateId()).prop("metric",condition.getMetricKey()).prop("op",condition.getOperator());
  if (condition.getWarningThreshold() != null) {
    writer.prop("warning",condition.getWarningThreshold());
  }
  if (condition.getErrorThreshold() != null) {
    writer.prop("error",condition.getErrorThreshold());
  }
  if (condition.getPeriod() != null) {
    writer.prop("period",condition.getPeriod());
  }
  writer.endObject();
  return writer;
}
