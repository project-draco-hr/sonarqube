{
  GetRequestBuilder requestBuilder=searchClient.prepareGet().setIndex("unknown").setType("test").setId("rule1");
  try {
    requestBuilder.get();
    fail();
  }
 catch (  Exception e) {
    assertThat(e).isInstanceOf(IllegalStateException.class);
    assertThat(e.getMessage()).contains("Fail to execute ES get request for key 'rule1' on index 'unknown' on type 'test'");
  }
}
