{
  DecoratorContext context=mock(DecoratorContext.class);
  when(context.getChildrenMeasures(CoreMetrics.LINES)).thenReturn(Arrays.<Measure>asList(new Measure(CoreMetrics.LINES,100.0),new Measure(CoreMetrics.LINES,50.0)));
  create(false).decorate(null,context);
  verify(context).saveMeasure(argThat(new IsMeasure(CoreMetrics.LINES,150.0)));
}
