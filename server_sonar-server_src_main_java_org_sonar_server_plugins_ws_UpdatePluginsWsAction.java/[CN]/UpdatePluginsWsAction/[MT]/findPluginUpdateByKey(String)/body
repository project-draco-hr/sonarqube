{
  PluginUpdate pluginUpdate=Iterables.find(updateCenterFactory.getUpdateCenter(false).findPluginUpdates(),new PluginKeyPredicate(key),MISSING_PLUGIN);
  if (pluginUpdate == MISSING_PLUGIN) {
    throw new IllegalArgumentException(format("No plugin with key '%s' or plugin '%s' is already in latest compatible version",key,key));
  }
  return pluginUpdate;
}
