{
  ExceptionConfig config=null;
  while (true) {
    String name=type.getName();
    log.debug("findException: look locally for " + name);
    config=findExceptionConfig(name);
    if (config != null) {
      return (config);
    }
    type=type.getSuperclass();
    if (type == null) {
      break;
    }
  }
  return (null);
}
