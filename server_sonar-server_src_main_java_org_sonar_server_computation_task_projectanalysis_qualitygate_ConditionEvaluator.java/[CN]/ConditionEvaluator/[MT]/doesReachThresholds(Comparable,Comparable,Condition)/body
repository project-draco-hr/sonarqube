{
  int comparison=measureValue.compareTo(criteriaValue);
switch (condition.getOperator()) {
case EQUALS:
    return comparison == 0;
case NOT_EQUALS:
  return comparison != 0;
case GREATER_THAN:
return comparison > 0;
case LESS_THAN:
return comparison < 0;
default :
throw new IllegalArgumentException(String.format("Unsupported operator '%s'",condition.getOperator()));
}
}
