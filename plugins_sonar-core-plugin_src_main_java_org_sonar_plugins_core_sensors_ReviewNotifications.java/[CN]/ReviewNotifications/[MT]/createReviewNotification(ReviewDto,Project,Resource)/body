{
  return new Notification("review-changed").setDefaultMessage("Review #" + review.getId() + " has changed.").setFieldValue("reviewId",String.valueOf(review.getId())).setFieldValue("project",project.getRoot().getLongName()).setFieldValue("projectId",String.valueOf(project.getId())).setFieldValue("resource",resource != null ? resource.getLongName() : null).setFieldValue("title",review.getTitle()).setFieldValue("creator",getCreator(review)).setFieldValue("assignee",getAssignee(review));
}
