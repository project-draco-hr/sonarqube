{
  return new Notification("review-changed").setFieldValue("reviewId",String.valueOf(review.getId())).setFieldValue("project",project.getRoot().getLongName()).setFieldValue("resource",resource != null ? resource.getLongName() : null).setFieldValue("title",review.getTitle()).setFieldValue("creator",getCreator(review)).setFieldValue("assignee",getAssignee(review));
}
