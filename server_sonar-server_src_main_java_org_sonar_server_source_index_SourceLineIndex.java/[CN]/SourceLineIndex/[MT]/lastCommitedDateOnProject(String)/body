{
  SearchRequestBuilder request=getClient().prepareSearch(SourceLineIndexDefinition.INDEX).setTypes(SourceLineIndexDefinition.TYPE).setSize(1).setQuery(QueryBuilders.boolQuery().must(QueryBuilders.termQuery(SourceLineIndexDefinition.FIELD_PROJECT_UUID,projectUuid))).setFetchSource(new String[]{SourceLineIndexDefinition.FIELD_SCM_DATE},null).addSort(SourceLineIndexDefinition.FIELD_SCM_DATE,SortOrder.DESC);
  SearchHit[] result=request.get().getHits().getHits();
  if (result.length > 0) {
    return new SourceLineDoc(result[0].sourceAsMap()).scmDate();
  }
  throw new NotFoundException(String.format("No source found on project '%s'",projectUuid));
}
