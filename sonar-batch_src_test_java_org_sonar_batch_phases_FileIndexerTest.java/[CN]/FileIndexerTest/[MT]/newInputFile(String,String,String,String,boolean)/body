{
  File file=new File(baseDir,path);
  FileUtils.write(file,content);
  return new InputFileBuilder(file,Charsets.UTF_8,path).attribute(InputFile.ATTRIBUTE_SOURCE_RELATIVE_PATH,sourceRelativePath).attribute(InputFile.ATTRIBUTE_LANGUAGE,languageKey).attribute(InputFile.ATTRIBUTE_TYPE,unitTest ? InputFile.TYPE_TEST : InputFile.TYPE_SOURCE).build();
}
