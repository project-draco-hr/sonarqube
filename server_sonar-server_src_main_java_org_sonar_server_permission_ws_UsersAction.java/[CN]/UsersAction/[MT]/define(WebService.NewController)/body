{
  WebService.NewAction action=context.createAction("users").setSince("5.2").setDescription(String.format("List permission's users.<br /> " + "If the project id or project key is provided, users with project permissions are returned.<br />" + "If the query parameter '%s' is specified, the '%s' parameter is '%s'.",Param.TEXT_QUERY,Param.SELECTED,SelectionMode.ALL.value())).addPagingParams(100).addSearchQuery("stas","names").addSelectionModeParam().setInternal(true).setResponseExample(getClass().getResource("users-example.json")).setHandler(this);
  createPermissionParameter(action);
  createProjectUuidParameter(action);
  createProjectKeyParameter(action);
}
