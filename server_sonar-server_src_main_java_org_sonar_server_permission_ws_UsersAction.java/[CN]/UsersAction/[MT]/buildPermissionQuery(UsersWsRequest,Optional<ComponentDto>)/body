{
  PermissionQuery.Builder dbQuery=PermissionQuery.builder().setPermission(request.getPermission()).setPageIndex(request.getPage()).setPageSize(request.getPageSize()).setSearchQuery(request.getQuery());
  if (project.isPresent()) {
    dbQuery.setComponentUuid(project.get().uuid());
  }
  if (request.getQuery() == null) {
    dbQuery.withAtLeastOnePermission();
  }
  return dbQuery.build();
}
