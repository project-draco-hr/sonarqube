{
  if (baseDir == null) {
    throw new IllegalStateException("Loader closed");
  }
  File file=new File(baseDir,name);
  if (!file.exists()) {
    return null;
  }
  InputStream is=null;
  try {
    is=new FileInputStream(file);
    return IOUtils.toByteArray(is);
  }
 catch (  IOException e) {
    return null;
  }
 finally {
    IOUtils.closeQuietly(is);
  }
}
