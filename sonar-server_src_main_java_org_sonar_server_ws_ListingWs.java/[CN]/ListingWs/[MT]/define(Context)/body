{
  NewController controller=context.newController("api/webservices").setDescription("List web services").setSince("4.2");
  controller.newAction("list").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response){
      String kill=request.param("kill");
      if (StringUtils.isNotBlank(kill)) {
        throw new ServerException(Integer.parseInt(kill),"KILLED");
      }
      list(context.controllers(),response);
    }
  }
);
  controller.done();
}
