{
  validate();
  Map<String,Object> hash=new TreeMap<>();
  if (subFields.isEmpty()) {
    hash.putAll(ImmutableMap.of("type","string","index",disableSearch ? "no" : "not_analyzed","norms",ImmutableMap.of("enabled",String.valueOf(!disableNorms)),"doc_values",docValues));
  }
 else {
    hash.put("type","multi_field");
    Map<String,Object> multiFields=new TreeMap<>(subFields);
    multiFields.put(fieldName,ImmutableMap.of("type","string","index","not_analyzed","norms",ImmutableMap.of("enabled","false"),"doc_values",docValues));
    hash.put("fields",multiFields);
  }
  indexType.setProperty(fieldName,hash);
}
