{
  boolean stopped=false;
  while (!stopped) {
    try {
      processRef.getProcess().waitFor();
      processRef.setStopped(true);
      stopped=true;
      LoggerFactory.getLogger(getClass()).info(String.format("%s is stopped",processRef));
      monitor.stopAsync();
    }
 catch (    InterruptedException ignored) {
    }
  }
}
