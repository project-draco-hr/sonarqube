{
  boolean alive=true;
  while (alive) {
    try {
      processRef.getProcess().waitFor();
      processRef.setTerminated(true);
      alive=false;
      LoggerFactory.getLogger(getClass()).info(String.format("%s is down",processRef));
      monitor.stop();
    }
 catch (    InterruptedException ignored) {
    }
  }
}
