{
  WebService.NewAction resetAction=controller.createAction(RESET_ACTION).setDescription("Reset an Activate rule based on its parent profile").setHandler(new RequestHandler(){
    @Override public void handle(    Request request,    Response response) throws Exception {
      reset(request,response);
    }
  }
).setPost(true).setSince("4.4");
  resetAction.createParam(PROFILE_KEY).setDescription("Key of Quality profile").setRequired(true).setExampleValue("Sonar way:java");
  resetAction.createParam(RULE_KEY).setDescription("Key of the rule to activate").setRequired(true).setExampleValue("squid:AvoidCycles");
}
