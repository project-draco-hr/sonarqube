{
  if (rootContainer != null) {
    try {
      TimeProfiler profiler=new TimeProfiler().start("Stop sonar");
      rootContainer.stop();
      rootContainer=null;
      connected=false;
      started=false;
      profiler.stop();
    }
 catch (    Exception e) {
      LoggerFactory.getLogger(getClass()).debug("Fail to stop Sonar - ignored",e);
    }
  }
}
