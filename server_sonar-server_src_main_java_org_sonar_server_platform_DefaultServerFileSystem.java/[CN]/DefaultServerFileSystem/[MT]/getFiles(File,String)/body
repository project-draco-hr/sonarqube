{
  List<File> files=new ArrayList<>();
  if (dir != null && dir.exists()) {
    if (fileSuffixes != null && fileSuffixes.length > 0) {
      files.addAll(FileUtils.listFiles(dir,fileSuffixes,false));
    }
 else {
      files.addAll(FileUtils.listFiles(dir,null,false));
    }
  }
  return files;
}
