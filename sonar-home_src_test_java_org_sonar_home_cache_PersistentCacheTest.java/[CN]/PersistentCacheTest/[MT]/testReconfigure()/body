{
  cache=new PersistentCache(tmp.getRoot().toPath(),Long.MAX_VALUE,mock(Logger.class));
  assertCacheHit(false);
  assertCacheHit(true);
  File root=tmp.getRoot();
  FileUtils.deleteQuietly(root);
  cache.reconfigure();
  assertThat(root).exists();
  assertCacheHit(false);
  assertCacheHit(true);
}
