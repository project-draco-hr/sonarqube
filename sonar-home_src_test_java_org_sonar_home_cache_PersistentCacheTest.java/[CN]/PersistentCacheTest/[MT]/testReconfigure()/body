{
  assertCacheHit(false);
  cache.put(URI,VALUE.getBytes(StandardCharsets.UTF_8));
  assertCacheHit(true);
  File root=tmp.getRoot();
  FileUtils.deleteQuietly(root);
  cache.reconfigure();
  assertThat(root).exists();
  assertCacheHit(false);
  cache.put(URI,VALUE.getBytes(StandardCharsets.UTF_8));
  assertCacheHit(true);
}
